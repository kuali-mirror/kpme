<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="LeaveAccrualCategoryMaintenanceDocument" parent="LeaveAccrualCategoryMaintenanceDocument-parentBean" />

	<bean id="LeaveAccrualCategoryMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" 
		p:businessObjectClass="org.kuali.hr.lm.accrual.LeaveAccrualCategory"
		p:businessRulesClass="org.kuali.hr.lm.accrual.validation.LeaveAccrualValidation"
		p:maintainableClass="org.kuali.hr.lm.accrual.service.LeaveAccrualMaintainableServiceImpl"
		p:documentAuthorizerClass="org.kuali.hr.time.authorization.SystemAdminAuthorizer">
		<property name="maintainableSections">
			<list>
				<ref bean="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryMaintenance" />
				<ref bean="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryRuleMaintenance" />
			</list>
		</property>
		<property name="webScriptFiles">
     		<list>
        		<value>../js/core.js</value>
      		</list>
    	</property>
		<property name="documentTypeName" value="LeaveAccrualCategoryDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryMaintenance"
		parent="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryMaintenance-parentBean" />

	<bean id="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="LeaveAccrualCategory Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="effectiveDate"
					p:required="true" p:noLookup="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="leavePlan"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="accrualCategory"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="descr" />
				<bean parent="MaintainableFieldDefinition" p:name="accrualEarnInterval"
					p:required="true" p:defaultValue="M"/>
				<bean parent="MaintainableFieldDefinition" p:name="proration"
					p:required="true" p:defaultValue="Y"/>
				<bean parent="MaintainableFieldDefinition" p:name="unitOfTime"
					p:required="true" p:defaultValue="H"/>
				<bean parent="MaintainableFieldDefinition" p:name="donation"
					p:required="true" p:defaultValue="N"/>
				<bean parent="MaintainableFieldDefinition" p:name="showOnGrid"
					p:required="true" p:defaultValue="Y"/>
				<bean parent="MaintainableFieldDefinition" p:name="active"
					p:required="true" p:defaultValue="true"/>
			</list>
		</property>
	</bean>

	<!-- LeaveAccrualCategoryRule maintenance section -->

	<bean id="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryRuleMaintenance"
		parent="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryRuleMaintenance-parentBean" />
	<bean
		id="LeaveAccrualCategoryMaintenanceDocument-LeaveAccrualCategoryRuleMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="accrualCategoryRules" />
		<property name="title" value="LeaveAccrualCategory Rules" />
		<property name="defaultOpen" value="true" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableCollectionDefinition">
					<property name="name" value="accrualCategoryRules" />
					<property name="businessObjectClass"
						value="org.kuali.hr.lm.accrual.LeaveAccrualCategoryRule" />
					<property name="alwaysAllowCollectionDeletion" value="true" />
					<property name="maintainableFields">
						<list>
							<bean parent="MaintainableFieldDefinition" p:name="serviceUnitOfTime" p:defaultValue="M"/>
							<bean parent="MaintainableFieldDefinition" p:name="start" p:required="true"/>
							<bean parent="MaintainableFieldDefinition" p:name="end" p:required="true"/>
							<bean parent="MaintainableFieldDefinition" p:name="accrualRate" p:required="true"/>
							<bean parent="MaintainableFieldDefinition" p:name="maxBalance" p:required="true" />
							<bean parent="MaintainableFieldDefinition" p:name="maxBalanceActionFrequency" p:required="true"/>
							<bean parent="MaintainableFieldDefinition" p:name="actionAtMaxBalance" p:required="true"/>
							<bean parent="MaintainableFieldDefinition" p:name="maxBalanceTransferToAccrualCategory"/>
							<bean parent="MaintainableFieldDefinition" p:name="maxBalanceTransferConversionFactor"/>							
							<bean parent="MaintainableFieldDefinition" p:name="maxTransferAmount"/>							
							<bean parent="MaintainableFieldDefinition" p:name="maxPayoutAmount"/>							
							<bean parent="MaintainableFieldDefinition" p:name="maxPayoutLeaveCode"/>							
							<bean parent="MaintainableFieldDefinition" p:name="maxUsage"/>							
							<bean parent="MaintainableFieldDefinition" p:name="maxCarryOver"/>							
							<bean parent="MaintainableFieldDefinition" p:name="active"/>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>