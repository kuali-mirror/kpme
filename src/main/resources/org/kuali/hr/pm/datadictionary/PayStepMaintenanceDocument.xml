<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="PayStepMaintenanceDocument" parent="PayStepMaintenanceDocument-parentBean"/>

  <bean id="PayStepMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry"
  		p:businessObjectClass="org.kuali.hr.pm.paystep.PayStep"
  		p:businessRulesClass="org.kuali.hr.pm.paystep.validation.PayStepValidation"
  		p:maintainableClass="org.kuali.hr.pm.paystep.service.PayStepMaintainableImpl"
  		p:documentAuthorizerClass="org.kuali.hr.time.authorization.DepartmentAdminAuthorizer">
    <property name="maintainableSections">
      <list>
        <ref bean="PayStepMaintenanceDocument-PayStepMaintenance"/>
      </list>
    </property>
    <property name="documentTypeName" value="PayStepMaintenanceDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="PayStepMaintenanceDocument-PayStepMaintenance" parent="PayStepMaintenanceDocument-PayStepMaintenance-parentBean"/>

  <bean id="PayStepMaintenanceDocument-PayStepMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Pay Step Maintenance"/>
    <property name="maintainableItems">
      <list>
      	<bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true"/>
		<bean parent="MaintainableFieldDefinition" p:name="payStep" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="institution" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="campus" p:required="true" />
		<bean parent="MaintainableFieldDefinition" p:name="salaryGroup" p:required="true"/>
		<bean parent="MaintainableFieldDefinition" p:name="payGrade" p:required="true"/>
		<bean parent="MaintainableFieldDefinition" p:name="stepNumber" />
		<bean parent="MaintainableFieldDefinition" p:name="compRate" />
		<bean parent="MaintainableFieldDefinition" p:name="serviceAmount" />
		<bean parent="MaintainableFieldDefinition" p:name="serviceUnit" />
        <bean parent="MaintainableFieldDefinition" p:name="active" p:defaultValue="true" p:required="true"/>
      </list>
    </property>
  </bean>

</beans>
