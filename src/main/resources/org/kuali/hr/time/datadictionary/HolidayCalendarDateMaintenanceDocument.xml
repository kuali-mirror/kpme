<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="HolidayCalendarDateMaintenanceDocument" parent="HolidayCalendarDateMaintenanceDocument-parentBean" />

	<bean id="HolidayCalendarDateMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.holidaycalendar.HolidayCalendarDateEntry"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="HolidayCalendarDateMaintenanceDocument-HolidayCalendarDateMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>id</value>
			</list>
		</property>
		<property name="documentTypeName" value="HolidayCalendarDateDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="HolidayCalendarDateMaintenanceDocument-HolidayCalendarDateMaintenance" parent="HolidayCalendarDateMaintenanceDocument-HolidayCalendarDateMaintenance-parentBean" />

	<bean id="HolidayCalendarDateMaintenanceDocument-HolidayCalendarDateMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Accrual Category Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="description" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="holiday" p:required="true" />
			</list>
		</property>
	</bean>

</beans>
