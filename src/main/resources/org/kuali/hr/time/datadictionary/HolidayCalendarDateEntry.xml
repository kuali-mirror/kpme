<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="HolidayCalendarDateEntry" parent="HolidayCalendarDateEntry-parentBean" />

	<bean id="HolidayCalendarDateEntry-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.hr.time.holidaycalendar.HolidayCalendarDateEntry" />
		<property name="titleAttribute" value="hrHolidayCalendarDateId" />
		<property name="objectLabel" value="holidayCalendarDateEntry" />
		<property name="lookupDefinition">
			<ref bean="HolidayCalendarDateEntry-lookupDefinition" />
		</property>
		<property name="attributes">
			<list>
				<ref bean="HolidayCalendarDateEntry-hrHolidayCalendarDateId" />
				<ref bean="HolidayCalendarDateEntry-holidayDate" />
				<ref bean="HolidayCalendarDateEntry-holidayDescr" />
				<ref bean="HolidayCalendarDateEntry-holidayHours" />
			</list>
		</property>
	</bean>

	<bean id="HolidayCalendarDateEntry-hrHolidayCalendarDateId" parent="HolidayCalendarDateEntry-hrHolidayCalendarDateId-parentBean" />
	<bean id="HolidayCalendarDateEntry-hrHolidayCalendarDateId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Id" />
		<property name="maxLength" value="60" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="60" />
		</property>
		<property name="name" value="hrHolidayCalendarDateId" />
		<property name="label" value="Holiday Calendar Date Id" />
	</bean>

	<bean id="HolidayCalendarDateEntry-holidayDescr" parent="HolidayCalendarDateEntry-holidayDescr-parentBean" />
	<bean id="HolidayCalendarDateEntry-holidayDescr-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Desc" />
		<property name="maxLength" value="30" />
		<property name="validationPattern">
			<bean parent="AlphaNumericValidationPattern">
				<property name="allowWhitespace" value="true" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="holidayDescr" />
		<property name="label" value="Description" />
	</bean>

	<bean id="HolidayCalendarDateEntry-holidayDate" parent="HolidayCalendarDateEntry-holidayDate-parentBean" />
	<bean id="HolidayCalendarDateEntry-holidayDate-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Holiday Date" />
		<property name="maxLength" value="12" />
		<property name="validationPattern">
			<bean parent="DateValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="12" p:datePicker="true" />
		</property>
		<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter" />
		<property name="name" value="holidayDate" />
		<property name="label" value="Holiday Date" />
	</bean>
	
	<bean id="HolidayCalendarDateEntry-holidayHours" parent="HolidayCalendarDateEntry-holidayHours-parentBean" />
	<bean id="HolidayCalendarDateEntry-holidayHours-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Holiday Hours" />
		<property name="maxLength" value="2" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="2" />
		</property>
		<property name="name" value="holidayHours" />
		<property name="label" value="Holiday Hours" />
	</bean>	

	<!--  Inquiry Definitions  -->


	<bean id="HolidayCalendarDateEntry-lookupDefinition" parent="HolidayCalendarDateEntry-lookupDefinition-parentBean" />
	<bean id="HolidayCalendarDateEntry-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="hrHolidayCalendarDateId" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="hrHolidayCalendarDateId" />
				<bean parent="FieldDefinition" p:attributeName="holidayDescr" />
				<bean parent="FieldDefinition" p:attributeName="holidayDate" />
			</list>
		</property>
		<property name="title" value="Holiday Calendar Date Lookup" />
	</bean>

</beans>