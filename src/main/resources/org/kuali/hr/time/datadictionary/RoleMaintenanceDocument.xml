<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="RoleMaintenanceDocument" parent="RoleMaintenanceDocument-parentBean" />

	<bean id="RoleMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.roles.TkRole"
		p:businessRulesClass="org.kuali.hr.time.roles.validation.TkRoleValidation"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl"
		p:documentAuthorizerClass="org.kuali.hr.time.authorization.DepartmentalRuleAuthorizer">
		<property name="maintainableSections">
			<list>
				<ref bean="RoleMaintenanceDocument-RoleMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>principalId</value>
				<value>positionNumber</value>
			</list>
		</property>
		<property name="documentTypeName" value="RoleMaintenanceDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="RoleMaintenanceDocument-RoleMaintenance" parent="RoleMaintenanceDocument-RoleMaintenance-parentBean" />

	<bean id="RoleMaintenanceDocument-RoleMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Role Maintenance" />
		<property name="maintainableItems">
			<list>
			    <bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="false" />
				<bean parent="MaintainableFieldDefinition" p:name="positionNumber" p:required="false" />
                <bean parent="MaintainableFieldDefinition" p:name="userName" p:required="false"/>
				<bean parent="MaintainableFieldDefinition" p:name="roleName" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="workArea" p:required="false" />
				<bean parent="MaintainableFieldDefinition" p:name="department" p:required="false" />
				<bean parent="MaintainableFieldDefinition" p:name="active" p:required="true" />
			</list>
		</property>
	</bean>

</beans>
