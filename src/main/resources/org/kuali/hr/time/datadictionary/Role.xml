<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="Role" parent="Role-parentBean" />

	<bean id="Role-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.hr.time.roles.TkRole" />
		<property name="titleAttribute" value="principalId" />
		<property name="objectLabel" value="Role" />
		<property name="lookupDefinition">
			<ref bean="Role-lookupDefinition" />
		</property>
		<property name="attributes">
			<list>
				<ref bean="Role-principalId" />
				<ref bean="Role-positionNumber" />
				<ref bean="Role-userName" />
				<ref bean="Role-roleName" />
				<ref bean="Role-workArea" />
				<ref bean="Role-department" />
				<ref bean="Role-chart" />
				<ref bean="Role-expirationDate" />
				<ref bean="Role-effectiveDate" />
				<ref bean="Role-userPrincipalId" />
				<ref bean="Role-active" />
			</list>
		</property>
		<property name="relationships">
			<list>
				<bean parent="RelationshipDefinition">
					<property name="objectAttributeName" value="person" />
					<property name="primitiveAttributes">
						<list>
							<bean parent="PrimitiveAttributeDefinition" p:sourceName="principalId"
								p:targetName="principalId" />
						</list>
					</property>
				</bean>
				<bean parent="RelationshipDefinition">
					<property name="objectAttributeName" value="workAreaObj" />
					<property name="primitiveAttributes">
						<list>
							<bean parent="PrimitiveAttributeDefinition" p:sourceName="workArea"
								p:targetName="workArea" />
						</list>
					</property>
				</bean>
				<bean parent="RelationshipDefinition">
					<property name="objectAttributeName" value="departmentObj" />
					<property name="primitiveAttributes">
						<list>
							<bean parent="PrimitiveAttributeDefinition" p:sourceName="department"
								p:targetName="dept" />
						</list>
					</property>
				</bean>
				<bean parent="RelationshipDefinition">
					<property name="objectAttributeName" value="locationObj" />
					<property name="primitiveAttributes">
						<list>
							<bean parent="PrimitiveAttributeDefinition" p:sourceName="chart"
								p:targetName="location" />
						</list>
					</property>
				</bean>
				<bean parent="RelationshipDefinition">
					<property name="objectAttributeName" value="positionObj" />
					<property name="primitiveAttributes">
						<list>
							<bean parent="PrimitiveAttributeDefinition" p:sourceName="positionNumber"
								p:targetName="positionNumber" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="Role-principalId" parent="Role-principalId-parentBean" />
	<bean id="Role-principalId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Principal Id" />
		<property name="maxLength" value="40" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="40" />
		</property>
		<property name="name" value="principalId" />
		<property name="label" value="Principal Id" />
	</bean>

	<bean id="Role-positionNumber" parent="Role-positionNumber-parentBean" />
	<bean id="Role-positionNumber-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Position Number" />
		<property name="maxLength" value="20" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="40" />
		</property>
		<property name="name" value="positionNumber" />
		<property name="label" value="Position Number" />
	</bean>

	<bean id="Role-roleName" parent="Role-roleName-parentBean" />
	<bean id="Role-roleName-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Role Name" />
		<property name="maxLength" value="20" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.hr.time.roles.TkRoleValuesFinder"
				p:includeKeyInLabel="false" />
		</property>
		<property name="name" value="roleName" />
		<property name="label" value="Role Name" />
	</bean>

	<bean id="Role-effectiveDate" parent="Role-effectiveDate-parentBean" />
	<bean id="Role-effectiveDate-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Effective Date" />
		<property name="maxLength" value="12" />
		<property name="validationPattern">
			<bean parent="DateValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="12" p:datePicker="true" />
		</property>
		<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter" />
		<property name="name" value="effectiveDate" />
		<property name="label" value="Effective Date" />
	</bean>

	<bean id="Role-expirationDate" parent="Role-expirationDate-parentBean" />
	<bean id="Role-expirationDate-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Expiration Date" />
		<property name="maxLength" value="12" />
		<property name="validationPattern">
			<bean parent="DateValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="12" p:datePicker="true" />
		</property>
		<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter" />
		<property name="name" value="expirationDate" />
		<property name="label" value="Expiration Date" />
	</bean>

	<bean id="Role-workArea" parent="Role-workArea-parentBean" />
	<bean id="Role-workArea-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="shortLabel" value="Work Area" />
		<property name="maxLength" value="7" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="7" />
		</property>
		<property name="name" value="workArea" />
		<property name="label" value="Work Area" />
	</bean>

	<bean id="Role-department" parent="Role-department-parentBean" />
	<bean id="Role-department-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Department" />
		<property name="maxLength" value="21" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="21" />
		</property>
		<property name="name" value="department" />
		<property name="label" value="Department" />
	</bean>

	<bean id="Role-chart" parent="Role-chart-parentBean" />
	<bean id="Role-chart-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="shortLabel" value="Location" />
		<property name="maxLength" value="10" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="10" />
		</property>
		<property name="name" value="chart" />
		<property name="label" value="Location" />
	</bean>

	<bean id="Role-active" parent="Role-active-parentBean" />
	<bean id="Role-active-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="shortLabel" value="Active" />
		<property name="control">
			<bean parent="CheckboxControlDefinition" />
		</property>
		<property name="name" value="active" />
		<property name="label" value="Active" />
		<property name="formatterClass"
			value="org.kuali.rice.core.web.format.BooleanFormatter" />
	</bean>

	<bean id="Role-userPrincipalId" parent="Role-userPrincipalId-parentBean" />
	<bean id="Role-userPrincipalId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="User Principal ID" />
		<property name="control">
			<bean parent="CheckboxControlDefinition" />
		</property>
		<property name="name" value="userPrincipalId" />
		<property name="label" value="User Principal ID" />
	</bean>

	<bean id="Role-userName" parent="Role-userName-parentBean" />
	<bean id="Role-userName-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="shortLabel" value="Name" />
		<property name="maxLength" value="30" />
		<property name="control">
			<bean parent="LookupReadonlyControlDefinition" p:size="30" />
		</property>
		<property name="name" value="userName" />
		<property name="label" value="Name" />
	</bean>

	<!-- Inquiry Definitions -->
    <bean id="Role-inquiryDefinition" parent="Role-inquiryDefinition-parentBean" />
    <bean id="Role-inquiryDefinition-parentBean" abstract="true"
        parent="InquiryDefinition">
        <property name="inquirySections">
            <list>
                <bean parent="InquirySectionDefinition">
                    <property name="numberOfColumns" value="1" />
                    <property name="inquiryFields">
                        <list>
			                <bean parent="FieldDefinition" p:attributeName="principalId" />
			                <bean parent="FieldDefinition" p:attributeName="positionNumber" />
			                <bean parent="FieldDefinition" p:attributeName="userName" />
			                <bean parent="FieldDefinition" p:attributeName="roleName" />
			                <bean parent="FieldDefinition" p:attributeName="effectiveDate" />
			                <bean parent="FieldDefinition" p:attributeName="expirationDate" />
			                <bean parent="FieldDefinition" p:attributeName="workArea" />
			                <bean parent="FieldDefinition" p:attributeName="department" />
			                <bean parent="FieldDefinition" p:attributeName="chart" />
			                <bean parent="FieldDefinition" p:attributeName="active" />
                        </list>
                    </property>
                    <property name="title" value="Role" />
                </bean>
            </list>
        </property>
        <property name="translateCodes" value="false" />
        <property name="title" value="Role Inquiry" />
    </bean>

    <!-- Lookup Definitions -->
	<bean id="Role-lookupDefinition" parent="Role-lookupDefinition-parentBean" />
	<bean id="Role-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="principalId" />
				<bean parent="FieldDefinition" p:attributeName="positionNumber" />
				<bean parent="FieldDefinition" p:attributeName="active" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="principalId" />
				<bean parent="FieldDefinition" p:attributeName="positionNumber" />
				<bean parent="FieldDefinition" p:attributeName="userName" />
				<bean parent="FieldDefinition" p:attributeName="roleName" />
				<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
				<bean parent="FieldDefinition" p:attributeName="expirationDate" />
				<bean parent="FieldDefinition" p:attributeName="workArea" />
				<bean parent="FieldDefinition" p:attributeName="department" />
				<bean parent="FieldDefinition" p:attributeName="chart" />
				<bean parent="FieldDefinition" p:attributeName="active" />
			</list>
		</property>
		<property name="title" value="User Role Lookup" />
	</bean>

</beans>