<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="WorkScheduleMaintenanceDocument" parent="WorkScheduleMaintenanceDocument-parentBean" />
	<bean id="WorkScheduleMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.workschedule.WorkSchedule"
		p:businessRulesClass="org.kuali.hr.time.workschedule.validation.WorkScheduleRule"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="WorkScheduleMaintenanceDocument-WorkScheduleMaintenance" />
				<ref bean="WorkScheduleMaintenanceDocument-WorkScheduleEntryMaintenance" />
			</list>
		</property>
		<property name="documentTypeName" value="WorkScheduleDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="WorkScheduleMaintenanceDocument-WorkScheduleMaintenance"
		parent="WorkScheduleMaintenanceDocument-WorkScheduleMaintenance-parentBean" />

	<bean
		id="WorkScheduleMaintenanceDocument-WorkScheduleMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="WorkSchedule Maintenance" />
		<property name="maintainableItems">
			<list>
			    <bean parent="MaintainableFieldDefinition" p:name="effectiveDate"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="workScheduleDesc"
					p:required="true" />
			</list>
		</property>
	</bean>

	<!-- WorkScheduleEntries maintenance section -->

	<bean id="WorkScheduleMaintenanceDocument-WorkScheduleEntryMaintenance"
		parent="WorkScheduleMaintenanceDocument-WorkScheduleEntryMaintenance-parentBean" />
	<bean
		id="WorkScheduleMaintenanceDocument-WorkScheduleEntryMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="workScheduleEntries" />
		<property name="title" value="WorkSchedule Entries" />
		<property name="defaultOpen" value="true" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableCollectionDefinition">
					<property name="name" value="workScheduleEntries" />
					<property name="businessObjectClass"
						value="org.kuali.hr.time.workschedule.WorkScheduleEntry" />
					<property name="alwaysAllowCollectionDeletion" value="true" />
				</bean>
			</list>
		</property>
	</bean>


</beans>