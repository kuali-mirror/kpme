<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="WorkAreaMaintenanceDocument" parent="WorkAreaMaintenanceDocument-parentBean"/>
  <bean id="WorkAreaMaintenanceDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="documentTypeName" value="WorkAreaMaintenanceDocument"/>
    <property name="documentClass" value="org.kuali.hr.time.workarea.WorkAreaMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.hr.time.workarea.web.WorkAreaMaintenanceDocumentAuthorizer"/>
    <property name="attributes">
      <list>
        <ref bean="WorkAreaMaintenanceDocument-workAreaId"/>
        <ref bean="WorkAreaMaintenanceDocument-description"/>
      </list>
    </property> 
  </bean>
 
  <bean id="WorkAreaMaintenanceDocument-workAreaId" parent="WorkAreaMaintenanceDocument-workAreaId-parentBean"/>
  <bean id="WorkAreaMaintenanceDocument-workAreaId-parentBean" parent="WorkArea-workAreaId" abstract="true" p:name="workArea.workAreaId" p:required="true">
  </bean>

  <bean id="WorkAreaMaintenanceDocument-description" parent="WorkAreaMaintenanceDocument-description-parentBean" />
  <bean id="WorkAreaMaintenanceDocument-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />

    <property name="maxLength" value="50" />
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="30" />
    </property>

    <property name="name" value="description" />
    <property name="label" value="Description" />
    <property name="description" value="Description" />
  </bean>  
  
</beans>
