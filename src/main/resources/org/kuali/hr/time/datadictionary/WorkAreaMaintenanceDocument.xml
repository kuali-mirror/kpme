<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="WorkAreaMaintenanceDocument" parent="WorkAreaMaintenanceDocument-parentBean" />

	<bean id="WorkAreaMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.workarea.WorkArea"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="WorkAreaMaintenanceDocument-WorkAreaMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>workAreaId</value>
			</list>
		</property>
		<property name="documentTypeName" value="WorkAreaDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="WorkAreaMaintenanceDocument-WorkAreaMaintenance" parent="WorkAreaMaintenanceDocument-WorkAreaMaintenance-parentBean" />

	<bean id="WorkAreaMaintenanceDocument-WorkAreaMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Work Area Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="workAreaId" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="description" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="deptId" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="overtimePreference" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="adminDescr" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="active" p:required="true" />
			</list>
		</property>
	</bean>
	
  <bean id="WorkAreaMaintenanceDocument-RoleAssignMaintenance" parent="WorkAreaMaintenanceDocument-RoleAssignMaintenance-parentBean"/>
  <bean id="WorkAreaMaintenanceDocument-RoleAssignMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
  	<property name="id" value="roleAssignments"/>
  	<property name="title" value="Role Assignments"/>
  	<property name="defaultOpen" value="true"/>
  	<property name="maintainableItems">
  		<list>	
  		  <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="roleAssignments"/>
          <property name="businessObjectClass" value="org.kuali.hr.time.role.assign.TkRoleAssign"/>
          <property name="alwaysAllowCollectionDeletion" value="true"/>          
          <property name="maintainableFields">
            <list> 
              <bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true"  />
              <bean parent="MaintainableFieldDefinition" p:name="roleName" p:required="true"  />
            </list>
          </property>        
        </bean>  
  		</list>
  	</property>
  </bean>

</beans>
