		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableCollectionDefinition">
					<property name="name" value="positionRoles"/>
                    <property name="businessObjectClass" value="org.kuali.hr.time.roles.TkRole"/>
                    <property name="alwaysAllowCollectionDeletion" value="false"/>
                    <property name="includeAddLine" value="false" />
                    <property name="maintainableFields">
                        <list>
                            <!--<bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true" />-->
                            <!--<bean parent="MaintainableFieldDefinition" p:name="userName" p:required="false"/>-->
                            <bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true" />
                            <bean parent="MaintainableFieldDefinition" p:name="roleName" p:required="true" p:readOnlyAfterAdd="true"/>
                            <bean parent="MaintainableFieldDefinition" p:name="positionNumber" p:required="true" p:readOnlyAfterAdd="true"/>
                            <bean parent="MaintainableFieldDefinition" p:name="workArea" p:required="false" p:lookupReadOnly="true" />
                            <bean parent="MaintainableFieldDefinition" p:name="department" p:required="false" p:lookupReadOnly="true"/>
                            <bean parent="MaintainableFieldDefinition" p:name="chart" p:required="false" p:readOnlyAfterAdd="true"/>
                            <bean parent="MaintainableFieldDefinition" p:name="expirationDate" p:required="true"/>
                            <bean parent="MaintainableFieldDefinition" p:name="active" p:defaultValue="true" p:required="true" />
                        </list>
                  </property>
				</bean>
			</list>
		</property>
	</bean>
<!-- Inactive Position roles here -->
	<bean id="RoleGroupMaintenanceDocument-InactivePositionRoleMaintenance" parent="RoleGroupMaintenanceDocument-InactivePositionRoleMaintenance-parentBean" />

	<bean id="RoleGroupMaintenanceDocument-InactivePositionRoleMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Inactive Position Roles" />
		<property name="id" value="inactivePositionRoles" />
		<property name="defaultOpen" value="false" />
		<property name="maintainableItems">
