<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="WorkArea" parent="WorkArea-parentBean" />

  <bean id="WorkArea-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.hr.time.workarea.WorkArea" />
    <property name="inquiryDefinition" >
      <ref bean="WorkArea-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="WorkArea-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="workAreaId" />
    <property name="attributes" >
      <list>
      	<ref bean="WorkArea-workAreaId" />
        <ref bean="WorkArea-effectiveDate" />
        <ref bean="WorkArea-active" />
        <ref bean="WorkArea-description" />
        <ref bean="WorkArea-deptId" />
        <ref bean="WorkArea-overtimePreference" />
        <ref bean="WorkArea-adminDescr" />
        <ref bean="WorkArea-userPrincipalId" />
        <ref bean="WorkArea-timestamp" />
       </list>
    </property>
    <property name="collections">
      <list>
        <bean parent="CollectionDefinition" p:name="roleAssignments" p:label="Role Assignments" p:shortLabel="Role Assignments" p:summary="Role Assignments" p:description="Role Assignments"/>
      </list>
    </property> 
    <property name="objectLabel" value="workAreaObj"/>
  </bean>

<!-- Attribute Definitions -->

  <bean id="WorkArea-workAreaId" parent="WorkArea-workAreaId-parentBean"/>

  <bean id="WorkArea-workAreaId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="WorkArea Id"/>
    <property name="maxLength" value="7"/>
    <property name="validationPattern">
 		<bean parent="NumericValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="7"/>
    </property>
    <property name="name" value="workAreaId"/>
    <property name="label" value="WorkArea Id"/>
  </bean>
  
  <bean id="WorkArea-effectiveDate" parent="WorkArea-effectiveDate-parentBean"/>

  <bean id="WorkArea-effectiveDate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Effective Date"/>
    <property name="maxLength" value="3"/>
    <property name="validationPattern">
 		<bean parent="DateValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="3" p:datePicker="true" />
    </property>
    <property name="formatterClass" value="org.kuali.rice.kns.web.format.DateFormatter"/>
    <property name="name" value="effectiveDate"/>
    <property name="label" value="Effective Date"/>
  </bean>
  
  <bean id="WorkArea-active" parent="WorkArea-active-parentBean"/>

  <bean id="WorkArea-active-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Active"/>
    <property name="maxLength" value="1"/>
    <property name="control">
      <bean parent="CheckboxControlDefinition"/>
    </property>
    <property name="formatterClass" value="org.kuali.rice.kns.web.format.BooleanFormatter"/>
    <property name="name" value="active"/>
    <property name="label" value="Active"/>
  </bean>
  
 <bean id="WorkArea-description" parent="WorkArea-description-parentBean" />

  <bean id="WorkArea-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />

    <property name="maxLength" value="50" />
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="30" />
    </property>

    <property name="name" value="description" />
    <property name="label" value="Description" />
    <property name="description" value="Description" />
  </bean>  
  
  <bean id="WorkArea-deptId" parent="WorkArea-deptId-parentBean" />

  <bean id="WorkArea-deptId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />

    <property name="maxLength" value="21" />
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="21" />
    </property>

    <property name="name" value="deptId" />
    <property name="label" value="Department Id" />
    <property name="description" value="deptId" />
  </bean>
  
  <bean id="WorkArea-overtimePreference" parent="WorkArea-overtimePreference-parentBean" />

  <bean id="WorkArea-overtimePreference-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="forceUppercase" value="true" />
	  <property name="maxLength" value="10" />
		<property name="control">
		  <bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.hr.time.workarea.web.WorkAreaOvertimePreferenceValuesFinder"/>
		</property>			  
    <property name="name" value="overtimePreference" />
    <property name="label" value="Overtime Preference" />
    <property name="description" value="overtimePreference" />
  </bean>

<bean id="WorkArea-adminDescr" parent="WorkArea-adminDescr-parentBean" />

  <bean id="WorkArea-adminDescr-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="forceUppercase" value="true" />
	  <property name="maxLength" value="10" />
      <property name="control" >
      <bean parent="TextControlDefinition" p:size="10" />
      </property>
    <property name="name" value="adminDescr" />
    <property name="label" value="Admin Description" />
    <property name="description" value="adminDescr" />
  </bean>
  
  <bean id="WorkArea-userPrincipalId" parent="WorkArea-userPrincipalId-parentBean"/>

  <bean id="WorkArea-userPrincipalId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="User Principal Id"/>
    <property name="maxLength" value="10"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern">
      	<property name="allowWhitespace" value="false"/>
      </bean>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="10"/>
    </property>
    <property name="name" value="userPrincipalId"/>
    <property name="label" value="User Principal Id"/>
  </bean>  

 <bean id="WorkArea-timestamp" parent="WorkArea-timestamp-parentBean"/>

  <bean id="WorkArea-timestamp-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Timestamp"/>
    <property name="maxLength" value="15"/>

    <property name="control">
      <bean parent="LookupReadonlyControlDefinition" p:size="15"/>
    </property>
     
    <property name="name" value="timestamp"/>
    <property name="label" value="Time Stamp"/>
  </bean>  
  
  
  
<!-- Business Object Inquiry Definition -->


  <bean id="WorkArea-inquiryDefinition" parent="WorkArea-inquiryDefinition-parentBean" />

  <bean id="WorkArea-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition" p:attributeName="workAreaId" />
              <bean parent="FieldDefinition" p:attributeName="description" />
              <bean parent="FieldDefinition" p:attributeName="deptId" />
            </list>
          </property>
          <property name="title" value="WorkArea" />
        </bean>
      </list>
    </property>
    <property name="title" value="WorkArea Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="WorkArea-lookupDefinition" parent="WorkArea-lookupDefinition-parentBean" />

  <bean id="WorkArea-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
  	<property name="lookupableID" value="workAreaLookupable"/>
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
      	<bean parent="FieldDefinition" p:attributeName="workAreaId" />
        <bean parent="FieldDefinition" p:attributeName="description" />
        <bean parent="FieldDefinition" p:attributeName="deptId" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
      	<bean parent="FieldDefinition" p:attributeName="workAreaId" />
        <bean parent="FieldDefinition" p:attributeName="deptId" p:forceInquiry="true" />
        <bean parent="FieldDefinition" p:attributeName="description" />
      </list>
    </property>
    <property name="title" value="WorkArea Lookup" />
  </bean>
</beans>