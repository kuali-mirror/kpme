<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="PrincipalCalendarMaintenanceDocument" parent="PrincipalCalendarMaintenanceDocument-parentBean" />

	<bean id="PrincipalCalendarMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.principal.calendar.PrincipalCalendar"
		p:businessRulesClass="org.kuali.hr.time.principal.calendar.validation.PrincipalCalendarRule"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="PrincipalCalendarMaintenanceDocument-PrincipalCalendarMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>principalId</value>
			</list>
		</property>
		<property name="documentTypeName" value="PrincipalCalendarMaintenanceDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="PrincipalCalendarMaintenanceDocument-PrincipalCalendarMaintenance" parent="PrincipalCalendarMaintenanceDocument-PrincipalCalendarMaintenance-parentBean" />

	<bean id="PrincipalCalendarMaintenanceDocument-PrincipalCalendarMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Principal Calendar Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="calendarGroup" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="holidayCalendarGroup" p:required="false" />
				<bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true" />
			</list>
		</property>
	</bean>

</beans>
