<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="PositionMaintenanceDocument" parent="PositionMaintenanceDocument-parentBean"/>

  <bean id="PositionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry"
  		p:businessObjectClass="org.kuali.hr.time.position.Position"
  		p:businessRulesClass="org.kuali.hr.time.position.validation.PositionValidation"
  		p:maintainableClass="org.kuali.hr.time.position.service.PositionMaintainableServiceImpl"
  		p:documentAuthorizerClass="org.kuali.hr.time.authorization.SystemAdminAuthorizer">
    <property name="maintainableSections">
      <list>
        <ref bean="PositionMaintenanceDocument-PositionMaintenance"/>
      </list>
    </property>
    <property name="lockingKeys">
        <list>
            <value>positionNumber</value>
        </list>
    </property>
    <property name="documentTypeName" value="PositionMaintenanceDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="PositionMaintenanceDocument-PositionMaintenance" parent="PositionMaintenanceDocument-PositionMaintenance-parentBean"/>

  <bean id="PositionMaintenanceDocument-PositionMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Position Maintenance"/>
    <property name="maintainableItems">
      <list>
        <bean parent="MaintainableFieldDefinition" p:name="positionNumber" p:unconditionallyReadOnly="true" p:defaultValueFinderClass="org.kuali.kfs.sys.businessobject.defaultvalue.NextUniquePositionNumberFinder"/>
        <bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="description" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="active" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="workArea" p:required="true"/>
      </list>
    </property>
  </bean>

</beans>
