<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="EarnGroupMaintenanceDocument" parent="EarnGroupMaintenanceDocument-parentBean" />

	<bean id="EarnGroupMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" 
		p:businessObjectClass="org.kuali.hr.time.earngroup.EarnGroup"
		p:businessRulesClass="org.kuali.hr.time.earngroup.validation.EarnGroupValidation"
		p:maintainableClass="org.kuali.hr.time.earngroup.service.EarnGroupMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="EarnGroupMaintenanceDocument-EarnGroupMaintenance" />
				<ref bean="EarnGroupMaintenanceDocument-EarnGroupDefMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>tkEarnGroupId</value>
			</list>
		</property>
		<property name="documentTypeName" value="EarnGroupDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="EarnGroupMaintenanceDocument-EarnGroupMaintenance"
		parent="EarnGroupMaintenanceDocument-EarnGroupMaintenance-parentBean" />
	<bean id="EarnGroupMaintenanceDocument-EarnGroupMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Earn Group Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="earnGroup"
					p:required="true" p:unconditionallyReadOnly="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="descr"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="effectiveDate"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="showSummary"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="active"
					p:required="true" />
			</list>
		</property>
	</bean>

	<!-- Earn Group Def maintenance section -->

	<bean id="EarnGroupMaintenanceDocument-EarnGroupDefMaintenance"
		parent="EarnGroupMaintenanceDocument-EarnGroupDefMaintenance-parentBean" />
	<bean
		id="EarnGroupMaintenanceDocument-EarnGroupDefMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="earnGroups" />
		<property name="title" value="Earn Group Defintions" />
		<property name="defaultOpen" value="true" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableCollectionDefinition">
					<property name="name" value="earnGroups" />
					<property name="businessObjectClass"
						value="org.kuali.hr.time.earngroup.EarnGroupDefinition" />
					<property name="alwaysAllowCollectionDeletion" value="true" />
					<property name="maintainableFields">
						<list>
							<bean parent="MaintainableFieldDefinition" p:name="earnCode"
								p:required="true" p:readOnlyAfterAdd="true" />
							<bean parent="MaintainableFieldDefinition" p:name="earnCodeDesc"
								p:unconditionallyReadOnly="true" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>


</beans>