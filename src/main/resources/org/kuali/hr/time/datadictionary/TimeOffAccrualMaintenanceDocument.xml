<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="TimeOffAccrualMaintenanceDocument" parent="TimeOffAccrualMaintenanceDocument-parentBean" />

	<bean id="TimeOffAccrualMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.accrual.TimeOffAccrual"
		p:businessRulesClass="org.kuali.hr.time.accrual.validation.TimeOffAccrualRule"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="TimeOffAccrualMaintenanceDocument-TimeOffAccrualMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>laAccrualId</value>
			</list>
		</property>
		<property name="documentTypeName" value="TimeOffAccrualDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="TimeOffAccrualMaintenanceDocument-TimeOffAccrualMaintenance" parent="TimeOffAccrualMaintenanceDocument-TimeOffAccrualMaintenance-parentBean" />

	<bean id="TimeOffAccrualMaintenanceDocument-TimeOffAccrualMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Sal Group Maintenance" />
		<property name="maintainableItems">
			<list>
			    <bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="accrualCategory" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="hoursAccrued" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="hoursTaken" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="hoursAdjust" p:required="true" />
			</list>
		</property>
	</bean>

</beans>
