<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="TimeSheetInitiateMaintenanceDocument" parent="TimeSheetInitiateMaintenanceDocument-parentBean"/>
  <bean id="TimeSheetInitiateMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry" 
  		p:businessObjectClass="org.kuali.hr.time.timesheet.TimeSheetInitiate"
  		p:businessRulesClass="org.kuali.hr.time.timesheet.validation.TimeSheetInitiateValidation"
   		p:maintainableClass="org.kuali.hr.time.timesheet.TimeSheetInitiateMaintainableImpl">
    <property name="maintainableSections">
      <list>
        <ref bean="TimeSheetInitiateMaintenanceDocument-TimeSheetInitiateMaintenance"/>
      </list>
    </property>
    <property name="documentTypeName" value="TimeSheetInitiateDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="TimeSheetInitiateMaintenanceDocument-TimeSheetInitiateMaintenance" parent="TimeSheetInitiateMaintenanceDocument-TimeSheetInitiateMaintenance-parentBean"/>
  <bean id="TimeSheetInitiateMaintenanceDocument-TimeSheetInitiateMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Time Sheet Initiate Maintenance"/>
    <property name="maintainableItems">
      <list>
        <bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="payCalendarEntriesId" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="calendarGroup" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="endPeriodDate" p:noLookup="true"/>
      </list>
    </property>
  </bean>

</beans>