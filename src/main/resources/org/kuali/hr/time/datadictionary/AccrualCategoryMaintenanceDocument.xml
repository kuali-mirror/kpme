<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="AccrualCategoryMaintenanceDocument" parent="AccrualCategoryMaintenanceDocument-parentBean"/>

  <bean id="AccrualCategoryMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry"
  		p:businessObjectClass="org.kuali.hr.time.accrual.AccrualCategory"
  		p:businessRulesClass="org.kuali.rice.kns.maintenance.rules.MaintenanceDocumentRuleBase"
  		p:maintainableClass="org.kuali.hr.time.accrual.service.AccuralCategoryMaintainableImpl">
    <property name="maintainableSections">
      <list>
        <ref bean="AccrualCategoryMaintenanceDocument-AccrualCategoryMaintenance"/>
      </list>
    </property>
    <property name="documentTypeName" value="AccrualCategoryDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="AccrualCategoryMaintenanceDocument-AccrualCategoryMaintenance" parent="AccrualCategoryMaintenanceDocument-AccrualCategoryMaintenance-parentBean"/>

  <bean id="AccrualCategoryMaintenanceDocument-AccrualCategoryMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Clock Location Rule Maintenance"/>
    <property name="maintainableItems">
      <list>
      	<bean parent="MaintainableFieldDefinition" p:name="accrualCategory" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="descr" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="active" p:defaultValue="true" p:required="true"/>
      </list>
    </property>
  </bean>

</beans>
