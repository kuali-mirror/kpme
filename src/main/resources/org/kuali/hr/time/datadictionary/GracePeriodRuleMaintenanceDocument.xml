<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="GracePeriodRuleMaintenanceDocument" parent="GracePeriodRuleMaintenanceDocument-parentBean"/>

  <bean id="GracePeriodRuleMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry" 
  		p:businessObjectClass="org.kuali.hr.time.graceperiod.rule.GracePeriodRule"
  		p:businessRulesClass="org.kuali.hr.time.graceperiod.rule.validation.GracePeriodRuleValidation"
   		p:maintainableClass=" org.kuali.hr.time.graceperiod.service.GracePeriodRuleMaintainableServiceImpl">
    <property name="maintainableSections">
      <list>
        <ref bean="GracePeriodRuleMaintenanceDocument-GracePeriodRuleMaintenance"/>
      </list>
    </property>
    <property name="documentTypeName" value="GracePeriodRuleDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="GracePeriodRuleMaintenanceDocument-GracePeriodRuleMaintenance" parent="GracePeriodRuleMaintenanceDocument-GracePeriodRuleMaintenance-parentBean"/>

  <bean id="GracePeriodRuleMaintenanceDocument-GracePeriodRuleMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Grace Period Rule Maintenance"/>
    <property name="maintainableItems">
      <list>
        <bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="hourFactor" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="active" p:required="true" p:defaultValue="true" />
      </list>
    </property>
  </bean>

</beans>
