<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="AccrualCategory" parent="AccrualCategory-parentBean" />

	<bean id="AccrualCategory-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.hr.time.accrual.AccrualCategory" />
		<property name="titleAttribute" value="id" />
		<property name="objectLabel" value="Accrual Category" />
		<property name="lookupDefinition">
			<ref bean="AccrualCategory-lookupDefinition" />
		</property>
		<property name="attributes">
			<list>
				<ref bean="AccrualCategory-id" />
				<ref bean="AccrualCategory-category" />
				<ref bean="AccrualCategory-description" />
				<ref bean="AccrualCategory-effectiveDate" />
				<ref bean="AccrualCategory-active" />
			</list>
		</property>
	</bean>

	<bean id="AccrualCategory-id" parent="AccrualCategory-id-parentBean" />
	<bean id="AccrualCategory-id-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Id" />
		<property name="maxLength" value="10" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="10" />
		</property>
		<property name="name" value="tkAccrualCategoryId" />
		<property name="label" value="Accrual Category Id" />
	</bean>

	<bean id="AccrualCategory-category" parent="AccrualCategory-category-parentBean" />
	<bean id="AccrualCategory-category-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Category" />
		<property name="maxLength" value="3" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="3" />
		</property>
		<property name="name" value="accrualCategory" />
		<property name="label" value="Accrual Category" />
	</bean>

	<bean id="AccrualCategory-description" parent="AccrualCategory-description-parentBean" />
	<bean id="AccrualCategory-description-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Desc" />
		<property name="maxLength" value="30" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="descr" />
		<property name="label" value="Description" />
	</bean>

	<bean id="AccrualCategory-effectiveDate" parent="AccrualCategory-effectiveDate-parentBean" />
	<bean id="AccrualCategory-effectiveDate-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Effective Date" />
		<property name="maxLength" value="12" />
		<property name="validationPattern">
			<bean parent="DateValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="12" p:datePicker="true" />
		</property>
		<property name="formatterClass" value="org.kuali.rice.kns.web.format.DateFormatter" />
		<property name="name" value="effectiveDate" />
		<property name="label" value="Effective Date" />
	</bean>

	<bean id="AccrualCategory-active" parent="AccrualCategory-active-parentBean" />
	<bean id="AccrualCategory-active-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Active" />
		<property name="control">
			<bean parent="CheckboxControlDefinition" />
		</property>
		<property name="name" value="active" />
		<property name="label" value="Active" />
	</bean>

	<!--  Inquiry Definitions  -->


	<bean id="AccrualCategory-lookupDefinition" parent="AccrualCategory-lookupDefinition-parentBean" />
	<bean id="AccrualCategory-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="id" />
				<bean parent="FieldDefinition" p:attributeName="category" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="id" />
				<bean parent="FieldDefinition" p:attributeName="category" />
				<bean parent="FieldDefinition" p:attributeName="description" />
				<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
			</list>
		</property>
		<property name="title" value="Accrual Category Lookup" />
	</bean>

</beans>