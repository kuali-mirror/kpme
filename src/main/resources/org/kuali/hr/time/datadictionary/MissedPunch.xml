<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean name="MissedPunch" parent="MissedPunch-parentBean" />

    <bean id="MissedPunch-parentBean" abstract="true"
        parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.hr.time.missedpunch.MissedPunch" />
        <property name="objectLabel" value="Missed Punch" />
        <property name="lookupDefinition">
            <ref bean="MissedPunch-lookupDefinition" />
        </property>
        <property name="attributes">
            <list>
                <ref bean="MissedPunch-principalId" />
                <ref bean="MissedPunch-assignment" />
                <ref bean="MissedPunch-clockAction" />
                <ref bean="MissedPunch-actionDate" />
                <ref bean="MissedPunch-actionTime" />
                <ref bean="MissedPunch-documentId" />
                <ref bean="MissedPunch-timesheetDocumentId" />
                <ref bean="MissedPunch-documentStatus" />
            </list>
        </property>
        <property name="relationships">
        <list>
            <bean parent="RelationshipDefinition">
              <property name="objectAttributeName" value="person"/>
              <property name="primitiveAttributes">
                <list>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="principalId" p:targetName="principalId"/>
                </list>
              </property>
            </bean>
          </list>
    </property>
    </bean>

	<bean id="MissedPunch-assignment" parent="MissedPunch-assignment-parentBean" />
	<bean id="MissedPunch-assignment-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
		<property name="shortLabel" value="Assignment" />
		<property name="maxLength" value="30" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
		  <bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.hr.time.assignment.AssignmentValuesFinder" p:includeKeyInLabel="false"/>
		</property>
		<property name="name" value="assignment" />
		<property name="label" value="Assignment" />
	</bean>


    <bean id="MissedPunch-principalId" parent="MissedPunch-principalId-parentBean" />
    <bean id="MissedPunch-principalId-parentBean" abstract="true"
        parent="AttributeDefinition">
        <property name="shortLabel" value="Principal Id" />
        <property name="maxLength" value="20" />
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern">
                <property name="allowWhitespace" value="false" />
            </bean>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="40" />
        </property>
        <property name="name" value="principalId" />
        <property name="label" value="Principal Id" />
    </bean>

    <bean id="MissedPunch-clockAction" parent="MissedPunch-clockAction-parentBean" />
    <bean id="MissedPunch-clockAction-parentBean" abstract="true"
        parent="AttributeDefinition">
        <property name="shortLabel" value="Clock Action" />
        <property name="maxLength" value="30" />
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern">
                <property name="allowWhitespace" value="false" />
            </bean>
        </property>
        <property name="control">
            <bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.kfs.coa.businessobject.options.TkClockActionValuesFinder" p:includeKeyInLabel="false"/>
        </property>
        <property name="name" value="clockAction" />
        <property name="label" value="Clock Action" />
    </bean>

    <bean id="MissedPunch-actionDate" parent="MissedPunch-actionDate-parentBean"/>
    <bean id="MissedPunch-actionDate-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="shortLabel" value="Action Date"/>
      <property name="maxLength" value="12"/>
      <property name="validationPattern">
          <bean parent="DateValidationPattern"/>
      </property>
      <property name="control">
        <bean parent="TextControlDefinition" p:size="12" p:datePicker="true" />
      </property>
      <property name="formatterClass" value="org.kuali.rice.kns.web.format.DateFormatter"/>
      <property name="name" value="actionDate"/>
      <property name="label" value="Action Date"/>
    </bean>

    <bean id="MissedPunch-actionTime" parent="MissedPunch-actionTime-parentBean"/>
    <bean id="MissedPunch-actionTime-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Action Time"/>
        <property name="maxLength" value="10"/>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="10"/>
        </property>
        <property name="validationPattern">
            <bean parent="RegexValidationPattern" p:pattern="[0-9]{2}:[0-9]{2}\s*[Aa|Pp][Mm]" p:validationErrorMessageKey="MISSING"/>
        </property>
        <property name="formatterClass" value="org.kuali.hr.time.rice.kns.web.format.SqlTimeFormatter"/>
        <property name="name" value="actionTime"/>
        <property name="label" value="Action Time"/>
    </bean>

    <bean id="MissedPunch-documentId" parent="MissedPunch-documentId-parentBean"/>
    <bean id="MissedPunch-documentId-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Document Id"/>
        <property name="maxLength" value="14"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern">
            <property name="allowWhitespace" value="false" />
            </bean>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="14"/>
        </property>
        <property name="name" value="documentId"/>
        <property name="label" value="Document Id"/>
    </bean>

    <bean id="MissedPunch-timesheetDocumentId" parent="MissedPunch-timesheetDocumentId-parentBean"/>
    <bean id="MissedPunch-timesheetDocumentId-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Timesheet Doc Id"/>
        <property name="maxLength" value="14"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern">
            <property name="allowWhitespace" value="false" />
            </bean>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="14"/>
        </property>
        <property name="name" value="timesheetDocumentId"/>
        <property name="label" value="Timesheet Document Id"/>
    </bean>

    <bean id="MissedPunch-documentStatus" parent="MissedPunch-documentStatus-parentBean" />
    <bean id="MissedPunch-documentStatus-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="maxLength" value="10" />
        <property name="control" >
            <bean parent="TextControlDefinition" p:size="10" />
        </property>
        <property name="name" value="documentStatus" />
        <property name="label" value="Document Status" />
    </bean>
    <!--  Inquiry Definitions  -->

    <bean id="MissedPunch-lookupDefinition" parent="MissedPunch-lookupDefinition-parentBean" />
    <bean id="MissedPunch-lookupDefinition-parentBean" abstract="true"
        parent="LookupDefinition">
        <property name="lookupableID" value="missedPunchLookupable"></property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="principalId" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="principalId" />
                <bean parent="FieldDefinition" p:attributeName="clockAction" />
                <bean parent="FieldDefinition" p:attributeName="actionDate" />
                <bean parent="FieldDefinition" p:attributeName="actionTime" />
                <bean parent="FieldDefinition" p:attributeName="timesheetDocumentId" />
                <bean parent="FieldDefinition" p:attributeName="documentId" />
                <bean parent="FieldDefinition" p:attributeName="documentStatus" />
            </list>
        </property>
        <property name="title" value="Missed Punch Lookup" />
    </bean>

</beans>