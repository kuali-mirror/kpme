<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="HolidayCalendarDate" parent="HolidayCalendarDate-parentBean" />

	<bean id="HolidayCalendarDate-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.hr.time.holiday.HolidayCalendarDate" />
		<property name="titleAttribute" value="id" />
		<property name="objectLabel" value="Holiday Date" />
		<property name="lookupDefinition">
			<ref bean="HolidayCalendarDate-lookupDefinition" />
		</property>
		<property name="attributes">
			<list>
				<ref bean="HolidayCalendarDate-id" />
				<ref bean="HolidayCalendarDate-holiday" />
				<ref bean="HolidayCalendarDate-description" />
			</list>
		</property>
	</bean>

	<bean id="HolidayCalendarDate-id" parent="HolidayCalendarDate-id-parentBean" />
	<bean id="HolidayCalendarDate-id-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Id" />
		<property name="maxLength" value="10" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="10" />
		</property>
		<property name="name" value="id" />
		<property name="label" value="Holiday Id" />
	</bean>

	<bean id="HolidayCalendarDate-description" parent="HolidayCalendarDate-description-parentBean" />
	<bean id="HolidayCalendarDate-description-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Desc" />
		<property name="maxLength" value="30" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="description" />
		<property name="label" value="Description" />
	</bean>

	<bean id="HolidayCalendarDate-holiday" parent="HolidayCalendarDate-holiday-parentBean" />
	<bean id="HolidayCalendarDate-holiday-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Holiday Date" />
		<property name="maxLength" value="12" />
		<property name="validationPattern">
			<bean parent="DateValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="12" p:datePicker="true" />
		</property>
		<property name="formatterClass" value="org.kuali.rice.kns.web.format.DateFormatter" />
		<property name="name" value="holiday" />
		<property name="label" value="Holiday Date" />
	</bean>

	<!--  Inquiry Definitions  -->


	<bean id="HolidayCalendarDate-lookupDefinition" parent="HolidayCalendarDate-lookupDefinition-parentBean" />
	<bean id="HolidayCalendarDate-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="id" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="id" />
				<bean parent="FieldDefinition" p:attributeName="description" />
				<bean parent="FieldDefinition" p:attributeName="holiday" />
			</list>
		</property>
		<property name="title" value="Holiday Calendar Lookup" />
	</bean>

</beans>