<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


	<bean id="HolidayCalendar" parent="HolidayCalendar-parentBean" />
	<bean id="HolidayCalendar-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass"
			value="org.kuali.hr.time.holidaycalendar.HolidayCalendar" />
		<property name="titleAttribute" value="hrHolidayCalendarId" />
		<property name="objectLabel" value="holidayCalendar" />
		<property name="inquiryDefinition">
			<ref bean="HolidayCalendar-inquiryDefinition" />
		</property>	
		<property name="lookupDefinition">
			<ref bean="HolidayCalendar-lookupDefinition" />
		</property>
		<property name="attributes">
			<list>
				<ref bean="HolidayCalendar-hrHolidayCalendarId" />
				<ref bean="HolidayCalendar-holidayCalendarGroup" />
				<ref bean="HolidayCalendar-descr" />
				<ref bean="HolidayCalendar-active" />
			</list>
		</property>
		<property name="collections">
			<list>
				<bean parent="CollectionDefinition" p:name="dateEntries"
					p:label="Holdiday Calendar Dates" p:shortLabel="Holiday Calendar Dates"
					p:summary="Holiday Calendar Dates" p:description="Holiday Calendar Dates" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->

	<bean id="HolidayCalendar-hrHolidayCalendarId" parent="HolidayCalendar-hrHolidayCalendarId-parentBean" />
	<bean id="HolidayCalendar-hrHolidayCalendarId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Id" />
		<property name="maxLength" value="60" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="60" />
		</property>
		<property name="name" value="hrHolidayCalendarId" />
		<property name="label" value="Holiday Calendar Id" />
	</bean>

	<bean id="HolidayCalendar-holidayCalendarGroup" parent="HolidayCalendar-holidayCalendarGroup-parentBean" />
	<bean id="HolidayCalendar-holidayCalendarGroup-parentBean"
		abstract="true" parent="AttributeDefinition">
		<property name="shortLabel" value="Calendar Group" />
		<property name="maxLength" value="3" />
		<property name="validationPattern">
			<bean parent="AlphaNumericValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="3" />
		</property>
		<property name="name" value="holidayCalendarGroup" />
		<property name="label" value="Holiday Calendar Group" />
	</bean>

	<bean id="HolidayCalendar-descr" parent="HolidayCalendar-descr-parentBean" />
	<bean id="HolidayCalendar-descr-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Description" />
		<property name="maxLength" value="30" />
		<property name="validationPattern">
			<bean parent="AlphaNumericValidationPattern">
				<property name="allowWhitespace" value="true" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="descr" />
		<property name="label" value="Description" />
	</bean>

	<bean id="HolidayCalendar-active" parent="HolidayCalendar-active-parentBean" />
	<bean id="HolidayCalendar-active-parentBean" abstract="true"
		parent="GenericAttributes-activeIndicator">
		<property name="name" value="active" />
		<property name="label" value="Active?" />
	</bean>
	<!--  Inquiry Definitions  -->
  
  	<bean id="HolidayCalendar-inquiryDefinition" parent="HolidayCalendar-inquiryDefinition-parentBean" />

	<bean id="HolidayCalendar-inquiryDefinition-parentBean" abstract="true"
		parent="InquiryDefinition">
		<property name="inquirySections">
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="numberOfColumns" value="1" />
					<property name="inquiryFields">
						<list>
							<bean parent="FieldDefinition" p:attributeName="holidayCalendarGroup" />
							<bean parent="FieldDefinition" p:attributeName="descr" />
							<bean parent="FieldDefinition" p:attributeName="active" />
						</list>
					</property>
					<property name="title" value="HolidayCalendar" />
				</bean>
				<bean parent="InquirySectionDefinition" p:title="Holiday Calendar Dates">
					<property name="inquiryFields">
						<list>
							<bean parent="InquiryCollectionDefinition" p:attributeName="dateEntries"
								p:businessObjectClass="org.kuali.hr.time.holidaycalendar.HolidayCalendarDateEntry">
								<property name="inquiryFields">
									<list>
										<bean parent="FieldDefinition" p:attributeName="holidayDescr" />
										<bean parent="FieldDefinition" p:attributeName="holidayDate" />
										<bean parent="FieldDefinition" p:attributeName="holidayHours" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>	
			</list>
		</property>
		<property name="translateCodes" value="false"/>
		<property name="title" value="HolidayCalendar Inquiry" />
	</bean>

	<!-- Look up Definitions  -->

	<bean id="HolidayCalendar-lookupDefinition" parent="HolidayCalendar-lookupDefinition-parentBean" />
	<bean id="HolidayCalendar-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="lookupableID" value="holidayCalendarLookupable"></property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="holidayCalendarGroup" />
				<bean parent="FieldDefinition" p:attributeName="descr" />
				<bean parent="FieldDefinition" p:attributeName="active"
					p:defaultValue="Y" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="holidayCalendarGroup" />
				<bean parent="FieldDefinition" p:attributeName="descr" />
				<bean parent="FieldDefinition" p:attributeName="active" />
			</list>
		</property>
		<property name="title" value="Holiday Calendar Lookup" />
	</bean>

</beans>
