<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


  <bean id="PayCalendar" parent="PayCalendar-parentBean"/>
  <bean id="PayCalendar-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.hr.time.paycalendar.PayCalendar"/>
    <property name="titleAttribute" value="payCalendarId"/>
    <property name="objectLabel" value="PayCalendar"/>
    <property name="lookupDefinition">
      <ref bean="PayCalendar-lookupDefinition"/>
    </property>
    <property name="attributes">
      <list>
        <ref bean="PayCalendar-calendarGroup"/>
        <ref bean="PayCalendar-chart"/>
        <ref bean="PayCalendar-beginDate"/>
        <ref bean="PayCalendar-beginTime"/>
        <ref bean="PayCalendar-endDate"/>
        <ref bean="PayCalendar-endTime"/>

      </list>
    </property>
    <property name="collections">
      <list>
        <bean parent="CollectionDefinition" p:name="payCalendarDates" p:label="Pay Calendar Dates" p:shortLabel="Pay Calendar Dates" p:summary="Pay Calendar Dates" p:description="Pay Calendar Dates"/>
      </list>
    </property>        
  </bean>

  <!-- Attribute Definitions -->

  <bean id="PayCalendar-calendarGroup" parent="PayCalendar-calendarGroup-parentBean"/>
  <bean id="PayCalendar-calendarGroup-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Calendar Group"/>
    <property name="maxLength" value="21"/>
    <property name="validationPattern">
 		<bean parent="AlphaNumericValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="21"/>
    </property>
    <property name="name" value="calendarGroup"/>
    <property name="label" value="Calendar Group"/>
  </bean>

  <bean id="PayCalendar-chart" parent="PayCalendar-chart-parentBean"/>
  <bean id="PayCalendar-chart-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Chart"/>
    <property name="maxLength" value="21"/>
    <property name="validationPattern">
 		<bean parent="AlphaNumericValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="21"/>
    </property>
    <property name="name" value="chart"/>
    <property name="label" value="Chart"/>
  </bean>

  
    
  <bean id="PayCalendar-beginDate" parent="PayCalendar-beginDate-parentBean"/>
  <bean id="PayCalendar-beginDate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Begin Date"/>
    <property name="maxLength" value="10"/>
    <property name="validationPattern">
 		<bean parent="DateValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="10" p:datePicker="true" />
    </property>
    <property name="formatterClass" value="org.kuali.hr.time.rice.kns.web.format.SqlDateFormatter"/>
    <property name="name" value="beginDate"/>
    <property name="label" value="Begin Date"/>
  </bean>

  <bean id="PayCalendar-beginTime" parent="PayCalendar-beginTime-parentBean"/>
  <bean id="PayCalendar-beginTime-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Begin Time"/>
    <property name="maxLength" value="10"/>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="10"/>
    </property>    
    <property name="validationPattern">
 		<bean parent="RegexValidationPattern" p:pattern="[0-9]{2}:[0-9]{2}\s*[Aa|Pp][Mm]" p:validationErrorMessageKey="MISSING"/>
    </property>
    <property name="formatterClass" value="org.kuali.hr.time.rice.kns.web.format.SqlTimeFormatter"/>
    <property name="name" value="beginTime"/>
    <property name="label" value="Begin Time"/>
  </bean>

  <!--  -->

  <bean id="PayCalendar-endDate" parent="PayCalendar-endDate-parentBean"/>
  <bean id="PayCalendar-endDate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="End Date"/>
    <property name="maxLength" value="10"/>
    <property name="validationPattern">
 		<bean parent="DateValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="10" p:datePicker="true" />
    </property>
    <property name="formatterClass" value="org.kuali.hr.time.rice.kns.web.format.SqlDateFormatter"/>
    <property name="name" value="endDate"/>
    <property name="label" value="End Date"/>
  </bean>

  <bean id="PayCalendar-endTime" parent="PayCalendar-endTime-parentBean"/>
  <bean id="PayCalendar-endTime-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="End Time"/>
    <property name="maxLength" value="10"/>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="10"/>
    </property>    
    <property name="validationPattern">
 		<bean parent="RegexValidationPattern" p:pattern="[0-9]{2}:[0-9]{2}\s*[Aa|Pp][Mm]" p:validationErrorMessageKey="MISSING"/>
    </property>
    <property name="formatterClass" value="org.kuali.hr.time.rice.kns.web.format.SqlTimeFormatter"/>
    <property name="name" value="endTime"/>
    <property name="label" value="End Time"/>
  </bean>

  <!-- -->
  <!-- Lookup Definition: -->
  <!-- -->

  <bean id="PayCalendar-lookupDefinition" parent="PayCalendar-lookupDefinition-parentBean"/>
  <bean id="PayCalendar-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <!--  property name="lookupableID" value="payCalendarLookupable"/ -->
    <property name="lookupFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="calendarGroup"/>
        <bean parent="FieldDefinition" p:attributeName="chart"/>
        <bean parent="FieldDefinition" p:attributeName="beginDate"/>
        <bean parent="FieldDefinition" p:attributeName="beginTime"/>
        <bean parent="FieldDefinition" p:attributeName="endDate"/>
        <bean parent="FieldDefinition" p:attributeName="endTime"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="calendarGroup"/>
        <bean parent="FieldDefinition" p:attributeName="chart"/>
        <bean parent="FieldDefinition" p:attributeName="beginDate"/>
        <bean parent="FieldDefinition" p:attributeName="beginTime"/>
        <bean parent="FieldDefinition" p:attributeName="endDate"/>
        <bean parent="FieldDefinition" p:attributeName="endTime"/> 
      </list>
    </property>
    <property name="title" value="Pay Calendar Lookup"/>
  </bean>
   
</beans>
