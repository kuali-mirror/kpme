<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Task" parent="Task-parentBean" />
  <bean id="Task-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.hr.time.task.Task" />
    <property name="inquiryDefinition" >
      <ref bean="Task-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Task-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="taskId" />
    <property name="attributes" >
      <list>
      	<ref bean="Task-taskId" />
      	<ref bean="Task-workAreaId" />
        <ref bean="Task-effectiveDate" />
        <ref bean="Task-description" />
        <ref bean="Task-adminDescription" />
        <ref bean="Task-timestamp" />
        <ref bean="Task-active" />
       </list>
    </property>
    <property name="objectLabel" value="taskObj"/>
  </bean>

<!-- Attribute Definitions -->
  <bean id="Task-taskId" parent="Task-taskId-parentBean"/>
  <bean id="Task-taskId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Task Id"/>
    <property name="maxLength" value="7"/>
    <property name="validationPattern">
 		<bean parent="NumericValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="7"/>
    </property>
    <property name="name" value="taskId"/>
    <property name="label" value="Task Id"/>
  </bean>


  <bean id="Task-workAreaId" parent="Task-workAreaId-parentBean"/>
  <bean id="Task-workAreaId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Work Area Id"/>
    <property name="maxLength" value="7"/>
    <property name="validationPattern">
 		<bean parent="NumericValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="7"/>
    </property>
    <property name="name" value="workAreaId"/>
    <property name="label" value="Work Area Id"/>
  </bean>
  
  <bean id="Task-effectiveDate" parent="Task-effectiveDate-parentBean"/>

  <bean id="Task-effectiveDate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Effective Date"/>
    <property name="maxLength" value="10"/>
    <property name="validationPattern">
 		<bean parent="DateValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="10" p:datePicker="true" />
    </property>
    <property name="formatterClass" value="org.kuali.rice.kns.web.format.DateFormatter"/>
    <property name="name" value="effectiveDate"/>
    <property name="label" value="Effective Date"/>
  </bean>
  
  <bean id="Task-active" parent="Task-active-parentBean"/>

  <bean id="Task-active-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Active"/>
    <property name="maxLength" value="1"/>
    <property name="control">
      <bean parent="CheckboxControlDefinition"/>
    </property>
    <property name="formatterClass" value="org.kuali.rice.kns.web.format.BooleanFormatter"/>
    <property name="name" value="active"/>
    <property name="label" value="Active"/>
  </bean>
  
 <bean id="Task-description" parent="Task-description-parentBean" />

  <bean id="Task-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />

    <property name="maxLength" value="50" />
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="30" />
    </property>

    <property name="name" value="description" />
    <property name="label" value="Description" />
    <property name="description" value="Description" />
  </bean>  
  

  <bean id="Task-adminDescription" parent="Task-adminDescription-parentBean" />
  <bean id="Task-adminDescription-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="forceUppercase" value="true" />
	  <property name="maxLength" value="10" />
      <property name="control" >
      <bean parent="TextControlDefinition" p:size="10" />
      </property>
    <property name="name" value="adminDescription" />
    <property name="label" value="Admin Description" />
    <property name="description" value="adminDescription" />
  </bean>
  

 <bean id="Task-timestamp" parent="Task-timestamp-parentBean"/>
  <bean id="Task-timestamp-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Timestamp"/>
    <property name="maxLength" value="15"/>

    <property name="control">
      <bean parent="LookupReadonlyControlDefinition" p:size="15"/>
    </property>
     
    <property name="name" value="timestamp"/>
    <property name="label" value="Time Stamp"/>
  </bean>  
  
  
  
<!-- Business Object Inquiry Definition -->


  <bean id="Task-inquiryDefinition" parent="Task-inquiryDefinition-parentBean" />
  <bean id="Task-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition" p:attributeName="taskId" />
              <bean parent="FieldDefinition" p:attributeName="workAreaId" />
              <bean parent="FieldDefinition" p:attributeName="description" />
            </list>
          </property>
          <property name="title" value="Task" />
        </bean>
      </list>
    </property>
    <property name="title" value="Task Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Task-lookupDefinition" parent="Task-lookupDefinition-parentBean" />
  <bean id="Task-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
  	<property name="lookupableID" value="workAreaLookupable"/>
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
      	<bean parent="FieldDefinition" p:attributeName="taskId" />
      	<bean parent="FieldDefinition" p:attributeName="workAreaId" />
        <bean parent="FieldDefinition" p:attributeName="description" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
      	<bean parent="FieldDefinition" p:attributeName="taskId" />
      	<bean parent="FieldDefinition" p:attributeName="workAreaId" />
        <bean parent="FieldDefinition" p:attributeName="description" />
      </list>
    </property>
    <property name="title" value="Task Lookup" />
  </bean>
</beans>