<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="HolidayCalendarMaintenanceDocument" parent="HolidayCalendarMaintenanceDocument-parentBean" />

	<bean id="HolidayCalendarMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.hr.time.holidaycalendar.HolidayCalendar"
		p:businessRulesClass="org.kuali.hr.time.holidaycalendar.validation.HolidayCalendarRule"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="maintainableSections">
			<list>
				<ref bean="HolidayCalendarMaintenanceDocument-HolidayCalendarMaintenance" />
				<ref
					bean="HolidayCalendarMaintenanceDocument-HolidayCalendarDatesMaintenance" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>holidayCalendarId</value>
			</list>
		</property>
		<property name="documentTypeName" value="HolidayCalendarDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="HolidayCalendarMaintenanceDocument-HolidayCalendarMaintenance"
		parent="HolidayCalendarMaintenanceDocument-HolidayCalendarMaintenance-parentBean" />
	<bean
		id="HolidayCalendarMaintenanceDocument-HolidayCalendarMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Holiday Calendar Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="holidayCalendarGroup"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="descr"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="active"  
					p:defaultValue="true" p:required="true"/>
			</list>
		</property>
	</bean>

	<!-- Holiday calendar dates maintenance section -->

	<bean
		id="HolidayCalendarMaintenanceDocument-HolidayCalendarDatesMaintenance"
		parent="HolidayCalendarMaintenanceDocument-HolidayCalendarDatesMaintenance-parentBean" />
	<bean
		id="HolidayCalendarMaintenanceDocument-HolidayCalendarDatesMaintenance-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="dateEntries" />
		<property name="title" value="Holiday Calendar Dates" />
		<property name="defaultOpen" value="true" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableCollectionDefinition">
					<property name="name" value="dateEntries" />
					<property name="businessObjectClass"
						value="org.kuali.hr.time.holidaycalendar.HolidayCalendarDateEntry" />
					<property name="alwaysAllowCollectionDeletion" value="true" />
					<property name="maintainableFields">
						<list>
							<bean parent="MaintainableFieldDefinition" p:name="holidayDescr" p:required="true" />
							<bean parent="MaintainableFieldDefinition" p:name="holidayDate" p:required="true" />
							<bean parent="MaintainableFieldDefinition" p:name="holidayHours" p:required="true"/>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>


</beans>