<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="LeaveAdjustmentMaintenanceDocument" parent="LeaveAdjustmentMaintenanceDocument-parentBean" />

	<bean id="LeaveAdjustmentMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry" 
		p:businessObjectClass="org.kuali.hr.lm.leaveadjustment.LeaveAdjustment"
		p:businessRulesClass="org.kuali.hr.lm.leaveadjustment.validation.LeaveAdjustmentValidation"
		p:maintainableClass="org.kuali.hr.lm.leaveadjustment.service.LeaveAdjustmentMaintainableServiceImpl"
		p:documentAuthorizerClass="org.kuali.hr.time.authorization.DepartmentAdminAuthorizer">
		<property name="maintainableSections">
			<list>
				<ref bean="LeaveAdjustmentMaintenanceDocument-LeaveAdjustmentMaintenance" />
			</list>
		</property>
		<property name="documentTypeName" value="LeaveAdjustmentDocumentType" />
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="LeaveAdjustmentMaintenanceDocument-LeaveAdjustmentMaintenance"
		parent="LeaveAdjustmentMaintenanceDocument-LeaveAdjustmentMaintenance-parentBean" />

	<bean id="LeaveAdjustmentMaintenanceDocument-LeaveAdjustmentMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Leave Adjustment Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true" p:noLookup="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="leavePlan" p:required="true" p:noLookup="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="accrualCategory"  p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="earnCode" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="adjustmentAmount" p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="description" p:required="true" />
			</list>
		</property>
	</bean>
	
</beans>