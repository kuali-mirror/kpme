<descriptor-repository version="1.0">

    <!-- Institution -->
    <class-descriptor class="org.kuali.hr.pm.institution.Institution" table="PM_INSTITUTION_T">
        <field-descriptor name="pmInstitutionId"      	column="PM_INSTITUTION_ID"  jdbc-type="VARCHAR"     length="60" 		primarykey="true" autoincrement="true" sequence-name="PM_INSTITUTION_S" />
        <field-descriptor name="institutionCode"        column="INSTITUTION_CODE"   jdbc-type="VARCHAR"     length="15" 		nullable="false" />
        <field-descriptor name="description"  			column="DESCRIPTION"     	jdbc-type="VARCHAR"     length="50"  		nullable="true" />
        <field-descriptor name="active"              	column="ACTIVE"             jdbc-type="VARCHAR"     length="1" 			nullable="false" />
        <field-descriptor name="effectiveDate"      	column="EFFECTIVE_DATE"     jdbc-type="DATE"        nullable="false"	conversion="org.apache.ojb.broker.accesslayer.conversions.JavaDate2SqlTimestampFieldConversion" />
        <field-descriptor name="timestamp"				column="TIMESTAMP"			jdbc-type="TIMESTAMP"	nullable="false"	conversion="org.kuali.hr.time.util.TkTimestampConverter" />
    </class-descriptor>

	<!-- Position Report Type -->
    <class-descriptor class="org.kuali.hr.pm.positionreporttype.PositionReportType" table="PM_PSTN_RPT_TYP_T">
        <field-descriptor name="pmPositionReportTypeId" 	column="PM_PSTN_RPT_TYP_ID"  jdbc-type="VARCHAR"     length="60" 		primarykey="true" autoincrement="true" sequence-name="PM_PSTN_RPT_TYP_S" />
        <field-descriptor name="positionReportType"      column="PSTN_RPT_TYP"		 jdbc-type="VARCHAR"     length="10" 		nullable="false" />
        <field-descriptor name="description"  			column="DESCRIPTION"     	 jdbc-type="VARCHAR"     length="100"  		nullable="true" />
        <field-descriptor name="institution"    		column="INSTITUTION"		 jdbc-type="VARCHAR"     length="15" 		nullable="false" />
        <field-descriptor name="campus"    				column="CAMPUS"				 jdbc-type="VARCHAR"     length="15" 		nullable="false" />
        <field-descriptor name="active"              	column="ACTIVE"             jdbc-type="VARCHAR"     length="1" 			nullable="false" />
        <field-descriptor name="effectiveDate"      	column="EFFECTIVE_DATE"     jdbc-type="DATE"        nullable="false"	conversion="org.apache.ojb.broker.accesslayer.conversions.JavaDate2SqlTimestampFieldConversion" />
    </class-descriptor>
</descriptor-repository>