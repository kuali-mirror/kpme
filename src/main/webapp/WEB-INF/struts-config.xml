<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

    <form-beans>
        <form-bean name="ClockActionForm" type="org.kuali.hr.time.clock.web.ClockActionForm"/>
        <form-bean name="TimeDetailActionForm" type="org.kuali.hr.time.detail.web.TimeDetailActionForm"/>
        <form-bean name="TimeApprovalActionForm" type="org.kuali.hr.time.approval.web.TimeApprovalActionForm"/>
        <form-bean name="AdminActionForm" type="org.kuali.hr.time.admin.web.AdminActionForm"/>
        <form-bean name="PersonInfoActionForm" type="org.kuali.hr.time.base.web.PersonInfoActionForm"/>
        <form-bean name="WorkAreaActionForm" type="org.kuali.hr.time.workarea.web.WorkAreaActionForm"/>
        <form-bean name="CacheAdministrationActionForm" type="org.kuali.hr.time.cache.web.CacheAdministrationActionForm" />
    </form-beans>

    <global-forwards type="org.apache.struts.action.ActionForward">
    </global-forwards>

	<action-mappings>
		<action path="/Clock" name="ClockActionForm" scope="request" input="/WEB-INF/jsp/clock.jsp" type="org.kuali.hr.time.clock.web.ClockAction" parameter="methodToCall" validate="false">
            <forward name="basic" path="/WEB-INF/jsp/clock.jsp" />
        </action>

        <action path="/TimeDetail" name="TimeDetailActionForm" scope="request" input="/WEB-INF/jsp/timeDetail.jsp" type="org.kuali.hr.time.detail.web.TimeDetailAction" parameter="methodToCall" validate="false">
            <forward name="basic" path="/WEB-INF/jsp/timeDetail.jsp" />
            <forward name="ws" path="/WEB-INF/jsp/webService.jsp" />
        </action>

        <action path="/TimeApproval" name="TimeApprovalActionForm" scope="request" input="/WEB-INF/jsp/timeApproval.jsp" type="org.kuali.hr.time.approval.web.TimeApprovalAction" parameter="methodToCall" validate="false">
            <forward name="basic" path="/WEB-INF/jsp/timeApproval.jsp" />
        </action>

        <action path="/Admin" name="AdminActionForm" scope="request" input="/WEB-INF/jsp/admin.jsp" type="org.kuali.hr.time.admin.web.AdminAction" parameter="methodToCall" validate="false">
            <forward name="basic" path="/WEB-INF/jsp/admin.jsp" />
        </action>

        <action path="/PersonInfo" name="PersonInfoActionForm" scope="request" input="/WEB-INF/jsp/personInfo.jsp" type="org.kuali.hr.time.base.web.PersonInfoAction" parameter="methodToCall" validate="false">
            <forward name="basic" path="/WEB-INF/jsp/personInfo.jsp" />
        </action>

       <action attribute="KualiForm" path="/WorkAreaMaintenance" input="/WEB-INF/jsp/workAreaMaintenance.jsp" name="WorkAreaActionForm" type="org.kuali.hr.time.workarea.web.WorkAreaAction" scope="session" parameter="methodToCall">
       		<forward name="basic" path="/WEB-INF/jsp/workAreaMaintenance.jsp" />
       </action>

		<action path="/CacheAdministration" name="CacheAdministrationActionForm" scope="request" input="/WEB-INF/jsp/cache.jsp" type="org.kuali.hr.time.cache.web.CacheAdministrationAction" parameter="methodToCall" validate="true" attribute="KualiForm">
            <forward name="basic" path="/WEB-INF/jsp/cache.jsp" />
        </action>
       
	</action-mappings>

    <controller processorClass="org.kuali.hr.time.web.TKRequestProcessor"/>
    <message-resources factory="org.kuali.rice.kns.web.struts.action.KualiPropertyMessageResourcesFactory" parameter="KR-ApplicationResources,org.kuali.rice.kew.ApplicationResources,org.kuali.rice.ksb.messaging.ApplicationResources,KIM-ApplicationResources,ApplicationResources" />

</struts-config>