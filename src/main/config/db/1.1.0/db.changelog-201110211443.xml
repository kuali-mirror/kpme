<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    
    <changeSet id="1" author="yingzhou" context="bootstrap">
        <comment>kpme-860: allow multiple IP addresses defined for clock location rule, ClockLocationRuleTest</comment>
        <createTable tableName="tk_ip_address_s">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="yingzhou" context="bootstrap">
        <comment>kpme-860: allow multiple IP addresses defined for clock location rule, ClockLocationRuleTest</comment>
        <createTable tableName="tk_ip_address_t">
        	<column name="TK_IP_ADDRESS_ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="TK_CLOCK_LOC_RULE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="IP_ADDRESS" type="VARCHAR(15)">
           	 	<constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="yingzhou" context="bootstrap">
        <comment>kpme-860: allow multiple IP addresses defined for clock location rule, ClockLocationRuleTest</comment>
        <dropColumn columnName="ip_address" tableName="tk_clock_location_rl_t"/>
    </changeSet>
    
</databaseChangeLog>