<?xml version='1.0' encoding='UTF-8'?> 
<data xmlns="ns:workflow" xmlns:fo="http://www.w3.org/1999/XSL/Format" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <ruleAttributes xmlns="ns:workflow/RuleAttribute" xsi:schemaLocation="ns:workflow/RuleAttribute resource:RuleAttribute">
    <ruleAttribute>
        <name>TkWorkflowMissedPunchAttribute</name>
        <className>org.kuali.hr.time.workflow.TkWorkflowMissedPunchAttribute</className>
        <label>TkWorkflowMissedPunchAttribute</label>
        <description>TkWorkflowMissedPunchAttribute</description>
        <type>RuleAttribute</type>
    </ruleAttribute>
  </ruleAttributes>

	<ruleTemplates xmlns="ns:workflow/RuleTemplate" xsi:schemaLocation="ns:workflow/RuleTemplate resource:RuleTemplate">
        <ruleTemplate allowOverwrite="true">
            <name>TkWorkflowMissedPunchTemplate</name>
            <description>TkWorkflowMissedPunchTemplate</description>
            <attributes>
                <attribute>
                    <name>TkWorkflowMissedPunchAttribute</name>
                    <required>false</required>
                </attribute>
            </attributes>
        </ruleTemplate>
	</ruleTemplates>



   <documentTypes xmlns="ns:workflow/DocumentType" xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">
        <documentType>
            <name>MissedPunchDocumentType</name>
            <parent>RiceDocument</parent>
            <superUserWorkgroupName>KPME-WKFLW:TK_SYSTEM_ADMIN</superUserWorkgroupName>
      		<blanketApproveWorkgroupName>KPME-WKFLW:TK_SYSTEM_ADMIN</blanketApproveWorkgroupName>
      		<defaultExceptionWorkgroupName>KPME-WKFLW:TK_SYSTEM_ADMIN</defaultExceptionWorkgroupName>
            <description>Missed Punch Document</description>
            <label>Missed Punch Document</label>
            <postProcessorName>org.kuali.hr.time.workflow.postprocessor.TkMissedPunchPostProcessor</postProcessorName>
            <docHandler>${TK.DocHandlerPrefix}missedPunch.do?methodToCall=docHandler</docHandler>
            <active>true</active>
            <routingVersion>1</routingVersion>
            <routePaths>
                <routePath>
                    <start name="adhoc" nextNode="Missed Punch"/>
                    <requests name="Missed Punch" />
                </routePath>
            </routePaths>
            <routeNodes>
                <start name="adhoc">
                    <exceptionWorkgroup>KPME-WKFLW:TK_SYSTEM_ADMIN</exceptionWorkgroup>
                    <activationType>S</activationType>
                    <mandatoryRoute>false</mandatoryRoute>
                    <finalApproval>false</finalApproval>
                </start>
                <requests name="Missed Punch">
                    <exceptionWorkgroup>KPME-WKFLW:TK_SYSTEM_ADMIN</exceptionWorkgroup>
                    <activationType>S</activationType>
                    <ruleTemplate>TkWorkflowMissedPunchTemplate</ruleTemplate>
                    <mandatoryRoute>true</mandatoryRoute>
                    <finalApproval>true</finalApproval>
                </requests>
            </routeNodes>
        </documentType>
     </documentTypes>


	<rules xmlns="ns:workflow/Rule" xsi:schemaLocation="ns:workflow/Rule resource:Rule">
	    <rule>
            <documentType>MissedPunchDocumentType</documentType>
            <ruleTemplate>TkWorkflowMissedPunchTemplate</ruleTemplate>
            <description>TkWorkflow Missed Punch</description>
            <forceAction>true</forceAction>
            <responsibilities>
                <responsibility>
                <role>org.kuali.hr.time.workflow.TkWorkflowMissedPunchAttribute!TK_APPROVER</role>
                <approvePolicy>F</approvePolicy>
                <actionRequested>A</actionRequested>
                <priority>1</priority>
                </responsibility>
            </responsibilities>
        </rule>
 	</rules>  
  
</data>