<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="RoleGroup" parent="RoleGroup-parentBean" />
	<bean id="RoleGroup-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.hr.time.roles.TkRoleGroup" />
		<property name="titleAttribute" value="principalId" />
		<property name="objectLabel" value="Roles Group" />
		<property name="inquiryDefinition">
			<ref bean="RoleGroup-inquiryDefinition" />
		</property>
		<property name="lookupDefinition">
			<ref bean="RoleGroup-lookupDefinition" />
		</property>
        <property name="attributes">
            <list>
                <ref bean="RoleGroup-principalId" />
                <ref bean="RoleGroup-userName"/>
                <ref bean="RoleGroup-workArea"/>
                <ref bean="RoleGroup-department"/>
                <ref bean="RoleGroup-principalName"/>
                <ref bean="RoleGroup-roleName"/>
            </list>
        </property>
        <property name="collections">
            <list>
                <bean parent="CollectionDefinition" p:name="roles" p:label="Roles" p:shortLabel="Roles" p:summary="Roles" p:description="Roles"/>
          		<bean parent="CollectionDefinition" p:name="inactiveRoles" p:label="Inactive Roles" p:shortLabel="Inactive Roles" p:summary="Inactive Roles" p:description="Inactive Roles" />
          		<bean parent="CollectionDefinition" p:name="positionRoles" p:label="Position Roles" p:shortLabel="Position Roles" p:summary="Position Roles" p:description="Position Roles" />
          		<bean parent="CollectionDefinition" p:name="inactivePositionRoles" p:label="Inactive Position Roles" p:shortLabel="Inactive Position Roles" p:summary="Inactive Position Roles" p:description="Inactive Position Roles" />
          	</list>
       	</property>
        <property name="relationships">
          <list>
            <bean parent="RelationshipDefinition">
              <property name="objectAttributeName" value="person"/>
              <property name="primitiveAttributes">
                <list>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="principalId" p:targetName="principalId"/>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="principalName" p:targetName="principalName"/>                  
                </list>
              </property>
            </bean>
			<bean parent="RelationshipDefinition">
				<property name="objectAttributeName" value="workAreaObj" />
				<property name="primitiveAttributes">
					<list>
						<bean parent="PrimitiveAttributeDefinition" p:sourceName="workArea"
							p:targetName="workArea" />
						<bean parent="PrimitiveAttributeDefinition" p:sourceName="department"
							p:targetName="dept" />
					</list>
				</property>
			</bean>
			<bean parent="RelationshipDefinition">
              <property name="objectAttributeName" value="departmentObj"/>
              <property name="primitiveAttributes">
                <list>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="department" p:targetName="dept"/>
                </list>
              </property>
            </bean>
			<bean parent="RelationshipDefinition">
              <property name="objectAttributeName" value="tkRoleObj"/>
              <property name="primitiveAttributes">
                <list>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="roleName" p:targetName="roleName"/>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="principalId" p:targetName="principalId"/>
                </list>
              </property>
            </bean>
          </list>
        </property>
	</bean>

    <bean id="RoleGroup-principalId" parent="RoleGroup-principalId-parentBean"/>
    <bean id="RoleGroup-principalId-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="shortLabel" value="Principal Id"/>
      <property name="maxLength" value="40"/>
      <property name="validationPattern">
        <bean parent="AnyCharacterValidationPattern">
          <property name="allowWhitespace" value="false"/>
        </bean>
      </property>
      <property name="control">
        <bean parent="TextControlDefinition" p:size="40"/>
      </property>
      <property name="name" value="principalId"/>
      <property name="label" value="Principal Id"/>
    </bean>
    
	<bean id="RoleGroup-workArea" parent="RoleGroup-workArea-parentBean" />
	<bean id="RoleGroup-workArea-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Work Area" />
		<property name="maxLength" value="30" />
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="workArea" />
		<property name="label" value="Work Area" />
	</bean>
	
	<bean id="RoleGroup-roleName" parent="RoleGroup-roleName-parentBean" />
	<bean id="RoleGroup-roleName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true"/>
		<property name="shortLabel" value="Role Name" />
		<property name="maxLength" value="30" />
		<property name="control">
		  <bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.hr.time.roles.TkRoleValuesFinder" p:includeKeyInLabel="false"/>
		</property>
		<property name="name" value="roleName" />
		<property name="label" value="Role Name" />
	</bean>
	
	<bean id="RoleGroup-department" parent="RoleGroup-department-parentBean" />
	<bean id="RoleGroup-department-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Department" />
		<property name="maxLength" value="30" />
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="department" />
		<property name="label" value="Department" />
	</bean>
	
    <bean id="RoleGroup-principalName" parent="RoleGroup-principalName-parentBean" />
    <bean id="RoleGroup-principalName-parentBean" abstract="true"
        parent="AttributeDefinition">
        <property name="shortLabel" value="Principal Name" />
        <property name="maxLength" value="30" />
        <property name="control">
            <bean parent="TextControlDefinition" p:size="30" />
        </property>
        <property name="name" value="principalName" />
        <property name="label" value="Principal Name" />
    </bean>
	
	
    <bean id="RoleGroup-userName" parent="RoleGroup-userName-parentBean" />
    <bean id="RoleGroup-userName-parentBean" abstract="true"
        parent="AttributeDefinition">
        <property name="shortLabel" value="Name" />
        <property name="maxLength" value="30" />
        <property name="control">
            <bean parent="TextControlDefinition" p:size="30" />
        </property>
        <property name="name" value="userName" />
        <property name="label" value="Name" />
    </bean>
	
	<!--  Inquiry Definitions  -->
  
  	<bean id="RoleGroup-inquiryDefinition" parent="RoleGroup-inquiryDefinition-parentBean" />

	<bean id="RoleGroup-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition" p:inquirableClass="org.kuali.hr.time.roles.TkRoleGroupInquirableImpl">
		<property name="inquirySections">
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="numberOfColumns" value="1" />
					<property name="inquiryFields">
						<list>
							<bean parent="FieldDefinition" p:attributeName="principalId" />
							<bean parent="FieldDefinition" p:attributeName="userName" />
						</list>
					</property>
					<property name="title" value="RoleGroup" />
				</bean>
				<bean parent="InquirySectionDefinition" p:title="Person Roles">
					<property name="inquiryFields">
						<list>
							<bean parent="InquiryCollectionDefinition" p:attributeName="roles"
								p:businessObjectClass="org.kuali.hr.time.roles.TkRole">
								<property name="inquiryFields">
									<list>
										<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
										<bean parent="FieldDefinition" p:attributeName="roleName" />
										<bean parent="FieldDefinition" p:attributeName="workArea" />
										<bean parent="FieldDefinition" p:attributeName="department" />
										<bean parent="FieldDefinition" p:attributeName="chart" />
										<bean parent="FieldDefinition" p:attributeName="active" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<bean parent="InquirySectionDefinition" p:title="Inactive Person Roles">
					<property name="inquiryFields">
						<list>
							<bean parent="InquiryCollectionDefinition" p:attributeName="inactiveRoles"
								p:businessObjectClass="org.kuali.hr.time.roles.TkRole">
								<property name="inquiryFields">
									<list>
										<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
										<bean parent="FieldDefinition" p:attributeName="roleName" />
										<bean parent="FieldDefinition" p:attributeName="workArea" />
										<bean parent="FieldDefinition" p:attributeName="department" />
										<bean parent="FieldDefinition" p:attributeName="chart" />
										<bean parent="FieldDefinition" p:attributeName="active" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<bean parent="InquirySectionDefinition" p:title="Position Roles">
					<property name="inquiryFields">
						<list>
							<bean parent="InquiryCollectionDefinition" p:attributeName="positionRoles"
								p:businessObjectClass="org.kuali.hr.time.roles.TkRole">
								<property name="inquiryFields">
									<list>
										<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
										<bean parent="FieldDefinition" p:attributeName="roleName" />
										<bean parent="FieldDefinition" p:attributeName="positionNumber" />
										<bean parent="FieldDefinition" p:attributeName="workArea" />
										<bean parent="FieldDefinition" p:attributeName="department" />
										<bean parent="FieldDefinition" p:attributeName="chart" />
										<bean parent="FieldDefinition" p:attributeName="active" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<bean parent="InquirySectionDefinition" p:title="Inactive Position Roles">
					<property name="inquiryFields">
						<list>
							<bean parent="InquiryCollectionDefinition" p:attributeName="inactivePositionRoles"
								p:businessObjectClass="org.kuali.hr.time.roles.TkRole">
								<property name="inquiryFields">
									<list>
										<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
										<bean parent="FieldDefinition" p:attributeName="roleName" />
										<bean parent="FieldDefinition" p:attributeName="positionNumber" />
										<bean parent="FieldDefinition" p:attributeName="workArea" />
										<bean parent="FieldDefinition" p:attributeName="department" />
										<bean parent="FieldDefinition" p:attributeName="chart" />
										<bean parent="FieldDefinition" p:attributeName="active" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<property name="title" value="RoleGroup Inquiry" />
	</bean>

	<!--  Look up Definitions  -->

	<bean id="RoleGroup-lookupDefinition" parent="RoleGroup-lookupDefinition-parentBean" />
	<bean id="RoleGroup-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
		<property name="lookupableID" value="tkRoleLookupable"></property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="principalId" />
				<bean parent="FieldDefinition" p:attributeName="workArea" />
				<bean parent="FieldDefinition" p:attributeName="department" />
				<bean parent="FieldDefinition" p:attributeName="principalName" />
				<bean parent="FieldDefinition" p:attributeName="roleName" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="principalId" />
                <bean parent="FieldDefinition" p:attributeName="userName" />
			</list>
		</property>
		<property name="title" value="Role Group Lookup" />
	</bean>

</beans>