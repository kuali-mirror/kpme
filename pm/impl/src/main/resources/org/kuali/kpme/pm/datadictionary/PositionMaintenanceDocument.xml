<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="PositionMaintenanceDocument" parent="PositionMaintenanceDocument-parentBean" />
	<bean id="PositionMaintenanceDocument-parentBean" abstract="true"
		parent="uifMaintenanceDocumentEntry" p:dataObjectClass="org.kuali.kpme.pm.position.Position"
		p:businessRulesClass="org.kuali.kpme.pm.position.validation.PositionValidation">
		<property name="maintainableClass"
			value="org.kuali.kpme.pm.position.web.PositionMaintainableServiceImpl" />
		<property name="lockingKeys">
			<list>
				<value>positionNumber</value>
			</list>
		</property>
		<property name="documentTypeName" value="PositionMaintenanceDocumentType" />

	</bean>

	<!-- Maintenance Section Definitions -->
	<bean id="PositionMaintenanceDocument-MaintenanceView"
		parent="PositionMaintenanceDocument-PositionMaintenance-parentBean" />
	<bean id="PositionMaintenanceDocument-PositionMaintenance-parentBean"
		abstract="true" parent="KPMEEffectiveDateBO-MaintenanceView">
		<property name="headerText" value="Position Maintenance" />
		<property name="dataObjectClassName" value="org.kuali.kpme.pm.position.Position" />
		<property name="items">
			<list>
				<ref bean="Pos-OverviewPage" />
				<ref bean="Pos-ClassificationPage" />
				<ref bean="Pos-DepartmentPage" />
				<ref bean="Pos-QualificationPage" />
				<ref bean="Pos-DutyPage" />
				<ref bean="Pos-FlagPage" />
				<ref bean="Pos-ResponsibilityPage" />
				<ref bean="Pos-FundingPage" />
				<ref bean="Pos-NoteAttachmentPage" />
				<ref bean="Pos-AdHocPage" />
				<ref bean="Pos-RouteLogPage" />
			</list>
		</property> 
		<property name="navigation">
			<ref bean="positionMenuNavigation" />
		</property>
		<property name="singlePageView" value="false" />
		<property name="header">
			<bean parent="KPME-Uif-DocumentViewHeader" />
		</property>
		<property name="stickyHeader" value="true" />
		<!-- 
		<property name="footer">
			<bean parent="KPME-Uif-FooterBase" />
		</property>  --> 
		<property name="applyDirtyCheck" value="false" />
	</bean> <!-- maintenance -->

	<!-- Navigation -->
	<bean id="positionMenuNavigation" parent="Uif-MenuNavigationGroup">
		<property name="items">
			<list>
				<bean parent="Uif-HeaderTwo" p:headerText="Position Details" />
				<bean parent="Uif-NavigationActionLink" id="Pos-Overview-Actionlink"
					p:navigateToPageId="Pos-OverviewPage" p:actionLabel="Overview" />
				<bean parent="Uif-NavigationActionLink" id="Pos-Classification-Actionlink"
					p:navigateToPageId="Pos-ClassificationPage" p:actionLabel="Classification" />
				<bean parent="Uif-NavigationActionLink" id="Pos-Department-Actionlink"
					p:navigateToPageId="Pos-DepartmentPage" p:actionLabel="Additional Departments" />
				<bean parent="Uif-NavigationActionLink" id="Pos-Qualification-Actionlink"
					p:navigateToPageId="Pos-QualificationPage" p:actionLabel="Qualifications" p:render="@{#dp.displayQualifications}"/>
				<bean parent="Uif-NavigationActionLink" id="Pos-Duty-Actionlink"
					p:navigateToPageId="Pos-DutyPage" p:actionLabel="Duties" p:render="@{#dp.displayDuties}"/>
				<bean parent="Uif-NavigationActionLink" id="Pos-Flag-Actionlink"
					p:navigateToPageId="Pos-FlagPage" p:actionLabel="Position Flags" p:render="@{#dp.displayFlags}" />
				<bean parent="Uif-NavigationActionLink" id="Pos-Responsibility-Actionlink"
					p:navigateToPageId="Pos-ResponsibilityPage" p:actionLabel="Responsibility" p:render="@{#dp.displayResponsibility}" />
				<bean parent="Uif-NavigationActionLink" id="Pos-Funding-Actionlink"
					p:navigateToPageId="Pos-FundingPage" p:actionLabel="Funding"  p:render="@{#dp.displayFunding}" />
				<bean parent="Uif-NavigationActionLink" id="Pos-NoteAttachment-Actionlink"
					p:navigateToPageId="Pos-NoteAttachmentPage" p:actionLabel="Notes @{#DocumentEntry.allowsNoteAttachments ? 'and Attachments' : ''} (@{document.notes.size()})" />
				<bean parent="Uif-NavigationActionLink" id="Pos-AdHoc-Actionlink"
					p:navigateToPageId="Pos-AdHocPage" p:actionLabel="Ad Hoc Recipients" p:render="@{#dp.displayAdHocRecipients}" />
				<bean parent="Uif-NavigationActionLink" id="Pos-RouteLog-Actionlink"
					p:navigateToPageId="Pos-RouteLogPage" p:actionLabel="Route Log" />
			</list>
		</property>
	</bean>

	<!-- Overview Section -->
	<bean id="Pos-OverviewPage" parent="Uif-MaintenancePage" >
		<property name="items">
			<list>
				<ref bean="Pos-OverviewPage-Widgets" />
				<bean parent="PositionNavigationButton" p:navigateToPageId="Pos-ClassificationPage" p:actionLabel="Classification"/>
			</list>
		</property>
	</bean>

	<bean id="Pos-OverviewPage-Widgets" parent="Uif-VerticalBoxSection"
		p:headerText="Overview">
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="process"
					p:required="true" id="position_process"
                    p:onChangeScript="if (jQuery('#position_process_control').val() == '') {jQuery('.ui-datepicker-trigger').hide();} else {jQuery('.ui-datepicker-trigger').show();}"
                       >
					<property name="control">
						<bean parent="Uif-DropdownControl" />
					</property>
					<property name="optionsFinder">
						<bean class="org.kuali.kpme.pm.util.ProcessKeyValueFinder"
							p:addBlankOption="false" />
					</property>
				</bean>
				<ref bean="Pos-OverviewPage-Section" />
			</list>
		</property>
	</bean>

	<bean id="Pos-OverviewPage-Section" parent="Uif-MaintenanceGridSection">



		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="effectiveDate"
					p:required="true"
                    >
                    <property name="validCharactersConstraint">
                        <bean parent="BasicDatePatternConstraint"/>
                    </property>
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="datePicker">
                                <bean parent="Uif-DatePicker" p:onDocumentReadyScript="if (jQuery('#position_process_control').val() == '') {jQuery('.ui-datepicker-trigger').hide();} else {jQuery('.ui-datepicker-trigger').show();}"/>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="institution" id="position_institution"
                      p:onDocumentReadyScript="
                        var options = jQuery('#position_institution_control option');
                        if (options.length == 2) {
                            jQuery('#position_institution_control').val(options[1].value);
                         }"
                      p:required="true"
                      p:refreshWhenChangedPropertyNames="#dp.effectiveDate">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update'  or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.kpme.core.util.InstitutionKeyValueFinder" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="location" id="position_location"
                      p:onDocumentReadyScript="
                        var options = jQuery('#position_location_control option');
                        if (options.length == 2) {
                            jQuery('#position_location_control').val(options[1].value);
                         }"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null  or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.kpme.core.util.LocationKeyValueFinder" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="primaryDepartment"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinderByScript" p:dataObjectClassName="org.kuali.kpme.core.department.DepartmentBo"
                              p:fieldConversions="dept:primaryDepartment"
                              p:lookupParameters="location:location,institution:institution" />
                    </property>
                    <property name="quickfinder.quickfinderAction.disabled"
                              value="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Data Update'}" >
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="positionClass"
                      p:required="true"
                      >
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="true"/>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder"
                              p:dataObjectClassName="org.kuali.kpme.pm.classification.Classification"
                              p:lookupParameters="location:location,institution:institution"/>
                    </property>
                    <property name="quickfinder.quickfinderAction.disabled"
                              value="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update'}" >
                    </property>
                    <property name="quickfinder.fieldConversions">
                        <map>
                            <entry key="positionClass" value="positionClass"/>
                            <entry key="pmPositionClassId" value="pmPositionClassId" />
                            <entry key="classificationTitle" value="classificationTitle" />
                            <entry key="salaryGroup" value="salaryGroup" />
                            <entry key="percentTime" value="percentTime" />
                            <entry key="benefitsEligible" value="benefitsEligible" />
                            <entry key="leaveEligible" value="leaveEligible" />
                            <entry key="leavePlan" value="leavePlan" />
                            <entry key="payGrade" value="payGrade" />
                            <entry key="positionReportGroup" value="positionReportGroup" />
                            <entry key="positionType" value="positionType" />
                            <entry key="poolEligible" value="poolEligible" />
                            <entry key="tenureEligible" value="tenureEligible" />
                            <entry key="active" value="active" />
                        </map>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="classificationTitle" p:readOnly="true "/>
				<bean parent="Uif-InputField" p:propertyName="description"
					p:required="true" >
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="positionStatus"
					p:required="true">
					<property name="control">
						<bean parent="Uif-DropdownControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
					</property>
					<property name="optionsFinder">
						<bean class="org.kuali.kpme.pm.util.StatusKeyValueFinder"
							p:addBlankOption="false" />
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="appointmentType"
					p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
					<property name="quickfinder">
						<bean parent="Uif-QuickFinderByScript"
							p:dataObjectClassName="org.kuali.kpme.pm.positionappointment.PositionAppointment"
							p:fieldConversions="positionAppointment:appointmentType"
							p:lookupParameters="location:location,institution:institution"/>
					</property>
                    <property name="quickfinder.quickfinderAction.disabled"
                              value="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}" >
                    </property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="temporary"
					p:required="true" p:defaultValue="N" >
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Yes" />
                                    <bean parent="Uif-KeyLabelPair" p:key="N" p:value="No" />
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="contract"
					p:required="true" p:defaultValue="N" >
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                                <property name="options">
                                    <list>
                                        <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Yes" />
                                        <bean parent="Uif-KeyLabelPair" p:key="N" p:value="No" />
                                    </list>
                                </property>
                        </bean>
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="contractType" p:constraintText="Required if Contract is Yes.">
					<property name="control">
						<bean parent="Uif-TextControl"
							p:disabled="@{document.newMaintainableObject.dataObject.contract ne 'Y' or #dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                            p:refreshWhenChangedPropertyNames="#dp.contract,#dp.process"/>
					</property>
					<property name="quickfinder">
						<bean parent="Uif-QuickFinderByScript"
							p:dataObjectClassName="org.kuali.kpme.pm.pstncontracttype.PstnContractType"
							p:fieldConversions="name:contractType" 
							p:lookupParameters="location:location,institution:institution" />
					</property>					
					<property name="quickfinder.quickfinderAction.disabled"
						value="@{document.newMaintainableObject.dataObject.contract ne 'Y' or #dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}" >
					</property>
					<property name="caseConstraint">
				        <bean parent="CaseConstraint">
				        	<property name="propertyName" value="contract" />
							<property name="whenConstraint">
					  			<list>
						          <bean parent="WhenConstraint">
						              <property name="values">
						                  <list>
						                      <value>Y</value>
						                  </list>
						              </property>
						              <property name="constraint">
						                  <bean parent="RequiredConstraint" />
						              </property>
						          </bean>
					         	 </list>
					         </property>
				         </bean>
					</property>	
				</bean>
				<bean parent="Uif-InputField" p:propertyName="reportsToPositionId" p:propertyNamesForAdditionalDisplay="reportsToWorkingTitle" >
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null  or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
					<property name="quickfinder">
						<bean parent="Uif-QuickFinderByScript" p:dataObjectClassName="org.kuali.kpme.pm.position.Position" 
						      p:fieldConversions="positionNumber:reportsToPositionId" 
						      p:lookupParameters="location:location,institution:institution" />
					</property>
                    <property name="quickfinder.quickfinderAction.disabled"
                              value="@{#dp.process eq '' or #dp.process eq null  or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}" >
                    </property>
                    <property name="attributeQuery">
	            		<bean parent="Uif-AttributeQueryConfig" p:dataObjectClassName="org.kuali.kpme.pm.position.Position"
	                  		p:queryFieldMapping="reportsToPositionId:positionNumber" p:returnFieldMapping="description:reportsToWorkingTitle"/>
	        		</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="expectedEndDate">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
                    <property name="validCharactersConstraint">
						<bean parent="BasicDatePatternConstraint" />
					</property>
					<property name="dependencyConstraints">
						<list>
							<bean parent="PrerequisiteConstraint" p:propertyName="renewEligible" />
						</list>
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="renewEligible"
					p:constraintText="Required if Expected End Date is filled.">
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Yes" />
                                    <bean parent="Uif-KeyLabelPair" p:key="N" p:value="No" />
                                </list>
                            </property>
                        </bean>
                    </property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Classification Section -->
	<bean id="Pos-ClassificationPage" parent="Uif-MaintenancePage">
		<property name="items">
			<list>
				<ref bean="Pos-ClassificationPage-Widgets" />
				<bean parent="PositionNavigationButton" p:navigateToPageId="Pos-DepartmentPage" p:actionLabel="Additional Departments" />
			</list>
		</property>
	</bean>
	<bean id="Pos-ClassificationPage-Widgets" parent="Uif-MaintenanceGridSection"
		p:headerText="Classification">
		<property name="items">
			<list>
                <bean parent="Uif-InputField" p:propertyName="positionClass"
                      p:required="true" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" />
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="positionReportGroup"
					p:readOnly="true" />
				<bean parent="Uif-InputField" p:propertyName="positionType"
					p:readOnly="true" />
				<bean parent="Uif-InputField" p:propertyName="poolEligible"
					p:defaultValue="N" p:required="true" >
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Yes" />
                                    <bean parent="Uif-KeyLabelPair" p:key="N" p:value="No" />
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="maxPoolHeadCount"
					p:constraintText="Must be a number.">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
					<property name="validCharactersConstraint">
						<bean parent="IntegerPatternConstraint" p:allowNegative="false" />
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="tenureEligible"
					p:required="true" >
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Yes" />
                                    <bean parent="Uif-KeyLabelPair" p:key="N" p:value="No" />
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="salaryGroup">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="percentTime"
					p:exclusiveMin="0" p:inclusiveMax="100"
					p:constraintText="Must be a number between 0 and 100.">
                    <property name="control">
                        <bean parent="Uif-SpinnerControl" p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="spinner">
                                <bean parent="Uif-Spinner">
                                    <property name="templateOptions">
                                        <map merge="true">
                                            <entry key="start" value="0.01" />
                                            <entry key="step" value="0.01" />
                                            <entry key="max" value="100" />
                                            <entry key="numberFormat" value="n" />
                                        </map>
                                    </property>
                                </bean>
                            </property>
                        </bean>
                    </property>
					<property name="validCharactersConstraint">
						<bean parent="FixedPointPatternConstraint" p:allowNegative="false"
							p:precision="5" p:scale="2" />
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="workMonths"
					p:constraintText="Must be a number between 1 and 12.">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process"/>
                    </property>
					<property name="validCharactersConstraint">
						<bean parent="IntegerPatternConstraint" p:allowNegative="false" />
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="benefitsEligible"
					p:required="true" >
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
                              p:refreshWhenChangedPropertyNames="#dp.process">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Yes" />
                                    <bean parent="Uif-KeyLabelPair" p:key="N" p:value="No" />
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
				<bean parent="Uif-InputField" p:propertyName="leaveEligible"
					p:required="true" >
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"
                              p:disabled="@{#dp.process eq '' or #dp.process eq null or #dp.process eq 'Reorganization' or #dp.process eq 'Data Update' or #dp.process eq 'Change Status'}"
