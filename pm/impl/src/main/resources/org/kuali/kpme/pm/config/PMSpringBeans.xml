	<bean id="kpmePositionModuleConfiguration" class="org.kuali.rice.krad.bo.ModuleConfiguration">
        <property name="namespaceCode" value="KPME-PM"/>
        <property name="initializeDataDictionary" value="true"/>
        <property name="packagePrefixes">
            <list>
                <value>org.kuali.kpme.pm</value>
            </list>
        </property>
        <property name="databaseRepositoryFilePaths">
			<list>
                <value>OJB-repository-position.xml</value>
			</list>
		</property>
		<property name="dataDictionaryPackages">
			<list merge="true">
                <value>org/kuali/hr/pm/datadictionary</value>
			</list>
		</property>
	</bean>

