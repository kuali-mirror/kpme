<?xml version="1.0" encoding="UTF-8"?>
<config>
	<!-- This holds configurations which are needed when running in embedded mode -->
	
	<!-- Rice module run modes -->
	<param name="kr.mode">LOCAL</param>
	<param name="core.mode">LOCAL</param>
    <param name="coreservice.mode">REMOTE</param>
    <param name="ksb.mode">REMOTE</param>
    <param name="kew.mode">EMBEDDED</param>
    <param name="kim.mode">EMBEDDED</param>
    
    <param name="ksb.app.code">ksb</param>
    <param name="ksb.env.code">${rice.env.code}</param>
    <param name="rice.ksb.registry.serviceUrl">${appserver.host}/${ksb.app.code}-${rice.env.code}/remoting/soap/ksb/v2_0/serviceRegistry</param>
    
    <!-- When in embedded mode load a filtering service registry so bad endpoints can be ignored -->
    <param name="rice.ksb.additionalSpringFiles">classpath:EdoKsbSpringBeans.xml</param>
</config>
