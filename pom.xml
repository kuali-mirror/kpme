    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kuali.kpme</groupId>
    <artifactId>time-and-attendance</artifactId>
    <packaging>war</packaging>
    <name>time-and-attendance</name>
    <description>KPME Time and Attendance</description>
    <version>0.1.0-SNAPSHOT</version>

    <properties>
        <!-- This can be overridden, as can the values contained in the file by the command line -->
        <!-- Example: -->
        <!-- mvn -Dliquibase.dbname=tk-foo -->
        <!--                                                   -->
        <!-- mvn -Dtna.properties.file=/tmp/tna-dev.properties -->
        <tna.properties.file>liquibase_defaults.properties</tna.properties.file>
    </properties>

    <profiles>
        <!-- -->
        <!-- Profile: kuali-test -->
        <!-- -->
        <profile>
            <id>kuali-test</id>
            <build>
                <plugins>
                    <!-- -->
                    <!-- Start of sql-maven-plugin configuration -->
                    <!-- -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <version>1.4</version>

                        <dependencies>
                            <dependency>
                                <groupId>mysql</groupId>
                                <artifactId>mysql-connector-java</artifactId>
                                <version>5.1.5</version>
                            </dependency>
                        </dependencies>

                        <configuration>
                            <driver>${liquibase.dbdriver}</driver>
                            <url>${liquibase.jdbcstring}${liquibase.dbname}</url>
                            <username>${liquibase.dbuser}</username>
                            <password>${liquibase.dbpass}</password>
                            <skip>${maven.test.skip}</skip>
                        </configuration>

                        <executions>
                            <execution>
                                <id>drop-db-before-test-if-any</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <!-- need another database to drop the targeted one -->
                                    <url>${liquibase.jdbcstring}</url>
                                    <autocommit>true</autocommit>
                                    <sqlCommand>drop database `${liquibase.dbname}`</sqlCommand>
                                    <!-- ignore error when database is not avaiable -->
                                    <onError>continue</onError>
                                </configuration>
                            </execution>

                            <execution>
                                <id>create-db</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <url>${liquibase.jdbcstring}</url>
                                    <!-- no transaction -->
                                    <autocommit>true</autocommit>
                                    <sqlCommand>create database `${liquibase.dbname}`</sqlCommand>
                                </configuration>
                            </execution>
                            <!--
                            <execution>
                                <id>liquibase-load</id>
                                <phase>process-test-resources</phase>
                                <goals><goal>liquibase:update</goal></goals>
                                <configuration>

                                </configuration>
                            </execution>
                            -->

                        </executions>
                    </plugin>
                    <!-- -->
                    <!-- End of sql-maven-plugin configuration -->
                    <!-- -->

                    <!-- -->
                    <!-- Liquibase during test Run -->
                    <!-- -->
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <version>2.0.1</version>
                        <configuration>
                            <propertyFileWillOverride>true</propertyFileWillOverride>
                            <propertyFile>target/classes/liquibase.properties</propertyFile>
                        </configuration>

                        <executions>
                            <execution>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>update</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- -->
                    <!-- End of Liquibase during test Run -->
                    <!-- -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>selenium-maven-plugin</artifactId>
                        <version>1.1</version>
                        <executions>
                            <execution>
                                <id>xvfb</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>xvfb</goal>
                                </goals>
                                <configuration>
                                    <display>:20</display>
                                </configuration>
                            </execution>
                            <!--
                            <execution>
                                <id>start-selenium</id>

                                <phase>test-compile</phase>
                                <goals>
                                    <goal>start-server</goal>
                                </goals>
                                <configuration>
                                    <background>true</background>
                                    <port>${selenium.server.port}</port>
                                    <logOutput>true</logOutput>
                                </configuration>
                            </execution>
                            -->
                            <execution>
                                <id>stop-selenium</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop-server</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>Dev-Environment</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>Test-Environment</id>
            <activation>
                <property>
                    <name>environment</name>
                    <value>test</value>
                </property>
            </activation>
        </profile>
    </profiles>

