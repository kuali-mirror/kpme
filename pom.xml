    <profiles>
        <!-- -->
        <!-- Profile: kuali-test -->
        <!-- -->
        <profile>
            <id>kuali-test</id>
            <build>
                <plugins>
                    <!-- -->
                    <!-- Start of sql-maven-plugin configuration -->
                    <!-- -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <version>1.4</version>

                        <dependencies>
                            <dependency>
                                <groupId>mysql</groupId>
                                <artifactId>mysql-connector-java</artifactId>
                                <version>5.1.5</version>
                            </dependency>
                        </dependencies>

                        <configuration>
                            <driver>${liquibase.dbdriver}</driver>
                            <url>${liquibase.jdbcstring}${liquibase.dbname}</url>
                            <username>${liquibase.dbuser}</username>
                            <password>${liquibase.dbpass}</password>
                            <skip>${maven.test.skip}</skip>
                        </configuration>

                        <executions>
                            <execution>
                                <id>drop-db-before-test-if-any</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <!-- need another database to drop the targeted one -->
                                    <url>${liquibase.jdbcstring}</url>
                                    <autocommit>true</autocommit>
                                    <sqlCommand>drop database `${liquibase.dbname}`</sqlCommand>
                                    <!-- ignore error when database is not avaiable -->
                                    <onError>continue</onError>
                                </configuration>
                            </execution>

                            <execution>
                                <id>create-db</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <url>${liquibase.jdbcstring}</url>
                                    <!-- no transaction -->
                                    <autocommit>true</autocommit>
                                    <sqlCommand>create database `${liquibase.dbname}`</sqlCommand>
                                </configuration>
                            </execution>

                              <execution>
                                <id>create-schema</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                  <goal>execute</goal>
                                </goals>
                                <configuration>
                                  <orderFile>ascending</orderFile>
                                  <fileset>
                                    <basedir>${basedir}</basedir>
                                    <includes>
                                      <include>src/main/config/sql/tk/tk-1.5-mysql/*.sql</include>
                                    </includes>
                                  </fileset>
                                </configuration>
                              </execution>

                              <execution>
                                <id>create-test-data</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                  <goal>execute</goal>
                                </goals>
                                <configuration>
                                  <orderFile>ascending</orderFile>
                                  <fileset>
                                    <basedir>${basedir}</basedir>
                                    <includes>
                                      <include>src/test/config/sql/tk-mysql/*.sql</include>
                                    </includes>
                                  </fileset>
                                </configuration>
                              </execution>

                        </executions>
                    </plugin>
                    <!-- -->
                    <!-- End of sql-maven-plugin configuration -->
                    <!-- -->
                    <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>selenium-maven-plugin</artifactId>
                    <version>1.1</version>
                    <executions>
                        <execution>
                            <id>xvfb</id>
                            <phase>process-test-resources</phase>
                            <goals>
                                <goal>xvfb</goal>
                            </goals>
