                <constraints nullable="false" />
            </column>
        </addColumn>
        <addColumn tableName="HR_EARN_CODE_T">
            <column name="DEF_TIME" type="VARCHAR(15)" />
        </addColumn>
        <addColumn tableName="HR_EARN_CODE_T">
            <column name="ALLOW_NEGATIVE_ACC_BALANCE" type="VARCHAR(1)">
