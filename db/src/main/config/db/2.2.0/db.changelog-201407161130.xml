<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    
    <changeSet id="1-oracle" author="tkagata" dbms="oracle" context="kpme-client-bootstrap">
        <createSequence sequenceName="EDO_GROUP_DEF_S" startValue="10000" />
    </changeSet>
    <changeSet id="1-mysql" author="tkagata" dbms="mysql" context="kpme-client-bootstrap">
        <sql>
            CREATE TABLE EDO_GROUP_DEF_S (
                ID BIGINT NOT NULL AUTO_INCREMENT, PRIMARY KEY (ID) 
            ) ENGINE MyISAM;
            ALTER TABLE EDO_GROUP_DEF_S AUTO_INCREMENT = 10000;
        </sql>
    </changeSet>
	
	<changeSet id="2" author="tkagata" context="kpme-client-bootstrap">
        <createTable tableName="EDO_GROUP_DEF_T">
            <column name="EDO_GROUP_ID" type="VARCHAR(60)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="EDO_WORKFLOW_ID" type="VARCHAR(60)">
                <constraints nullable="false" />
            </column>            
            <column name="WORKFLOW_LEVEL" type="VARCHAR(25)" >
                <constraints nullable="false" />
            </column>
            <column name="DOSSIER_TYPE" type="VARCHAR(2)" >
                <constraints nullable="false" />
            </column>
            <column name="WORKFLOW_TYPE" type="VARCHAR(25)" >
                <constraints nullable="false" />
            </column>
            <column name="KIM_TYPE_NAME" type="VARCHAR(25)" >
                <constraints nullable="false" />
            </column>
            <column name="KIM_ROLE_NAME" type="VARCHAR(64)">
                <constraints nullable="false" />
            </column>
            <column name="EFFDT" type="DATE">
                <constraints nullable="true" />
            </column>   
            <column name="ACTIVE" type="VARCHAR(1)" defaultValue="Y">
                <constraints nullable="false" />
            </column>
            <column name="TIMESTAMP" type="DATETIME" defaultValueDate="1970-01-01 00:00:00">
            	<constraints nullable="false" />
            </column>
            <column name="OBJ_ID" type="VARCHAR(36)" />       
            <column name="VER_NBR" type="BIGINT" defaultValueNumeric="1">
                <constraints nullable="false" />
           	</column>
           	<column name="USER_PRINCIPAL_ID" type="VARCHAR(40)" />
        </createTable>
		<modifySql dbms="mysql">
			<append value=" ENGINE INNODB" />
		</modifySql>
    </changeSet>
    
</databaseChangeLog>