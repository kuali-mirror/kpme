<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="1" author="vchauhan" dbms="mysql"
		context="kpme-client-bootstrap">
		<comment>KPME-2017 Set Nullable = true as per specifications</comment>
		<dropNotNullConstraint tableName="LM_ACCRUAL_CATEGORY_RULES_T"
			columnName="SERVICE_UNIT_OF_TIME" columnDataType="VARCHAR(50)" />
		<dropNotNullConstraint tableName="LM_ACCRUAL_CATEGORY_RULES_T"
			columnName="MAX_BAL" columnDataType="DECIMAL(10,2)" />
		<dropNotNullConstraint tableName="LM_ACCRUAL_CATEGORY_RULES_T"
			columnName="MAX_BAL_ACTION_FREQUENCY" columnDataType="VARCHAR(5)" />
		<dropNotNullConstraint tableName="LM_ACCRUAL_CATEGORY_RULES_T"
			columnName="ACTION_AT_MAX_BAL" columnDataType="VARCHAR(5)" />
		<addNotNullConstraint tableName="LM_ACCRUAL_CATEGORY_RULES_T"
			columnName="MAX_BAL_FLAG" columnDataType="VARCHAR(1)" />
	</changeSet>
</databaseChangeLog>