<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    
 	<changeSet id="1" author="jjhanso" context="kpme-server-bootstrap">
        <comment>Set up base kpme document type - allows auto-ingestion to work</comment>
        <delete tableName="KREW_DOC_TYP_T">
            <where>DOC_TYP_NM = 'KpmeDocument'</where>
        </delete>

        <insert tableName="KREW_DOC_TYP_T">
            <column name="DOC_TYP_ID" value="KPME0001"/>
            <column name="PARNT_ID" valueComputed="(select B.DOC_TYP_ID from KREW_DOC_TYP_T B where B.DOC_TYP_NM = 'RiceDocument' AND B.ACTV_IND = 1 AND B.CUR_IND = 1)"  />
            <column name="DOC_TYP_NM" value="KpmeDocument"/>
            <column name="DOC_TYP_VER_NBR" value="0"/>
            <column name="ACTV_IND" value="1"/>
            <column name="CUR_IND" value="1"/>
            <column name="LBL" value="Base KPME Rule Document"/>
            <column name="DOC_HDLR_URL" value="${kuali.docHandler.url.prefix}/kr/maintenance.do?methodToCall=docHandler"/>
            <column name="APPL_ID" value="KPME"/>
            <column name="OBJ_ID" valueComputed="SYS_GUID()"/>
        </insert>

        <modifySql dbms="mysql">
            <replace replace="SYSDATE" with="NOW()" />
            <replace replace="SYS_GUID()" with="UUID()" />
        </modifySql>
	 </changeSet>

</databaseChangeLog>