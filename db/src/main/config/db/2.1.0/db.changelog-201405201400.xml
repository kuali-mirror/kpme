<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="mlemons" context="kpme-client-bootstrap">
        <addColumn tableName="HR_EARN_CODE_SECURITY_T">
            <column name="GRP_KEY_CD" type="VARCHAR(30)" defaultValue="DEFAULT">
            </column>
        </addColumn>

        <update tableName="HR_EARN_CODE_SECURITY_T">
            <column name="GRP_KEY_CD" value="DEFAULT"/>
        </update>

        <update tableName="hr_grp_key_t">
            <column name="LOCATION" value="IN" />
            <where>GRP_KEY_CD = 'DEFAULT'</where>
        </update>

        <addNotNullConstraint columnName="GRP_KEY_CD" tableName="HR_EARN_CODE_SECURITY_T" columnDataType="VARCHAR(30)"/>
    </changeSet>

</databaseChangeLog>