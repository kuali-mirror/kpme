<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1-oracle" author="mlemons" dbms="oracle" context="kpme-client-bootstrap">
        <comment>Creating the oracle sequence for the position type group key table's primary key</comment>
        <createSequence sequenceName="PM_PSTN_CL_GRP_KEY_S" startValue="10000" />
    </changeSet>

    <changeSet id="1-mysql" author="mlemons" dbms="mysql" context="kpme-client-bootstrap">
        <comment>Creating the MySQL sequence table for the position type key table's primary key</comment>
        <sql>
            CREATE TABLE PM_PSTN_CL_GRP_KEY_S (
            ID BIGINT NOT NULL AUTO_INCREMENT, PRIMARY KEY (ID)
            ) ENGINE MyISAM;
            ALTER TABLE PM_PSTN_CL_GRP_KEY_S AUTO_INCREMENT = 10000;
        </sql>
    </changeSet>


    <!-- PM_PSTN_CL_ID -->
    <changeSet id="2" author="mlemons" context="kpme-client-bootstrap">
        <comment>Creating the table for the position report group key</comment>
        <createTable tableName="PM_PSTN_CL_GRP_KEY_T">
            <column name="PM_PSTN_CL_GRP_KEY_ID" type="VARCHAR(60)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="PM_PSTN_CL_ID" type="VARCHAR(60)">
                <constraints nullable="false" />
            </column>
            <column name="GRP_KEY_CD" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="OBJ_ID" type="VARCHAR(36)" />
            <column name="VER_NBR" type="BIGINT" defaultValueNumeric="1">
                <constraints nullable="false" />
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" ENGINE INNODB" />
        </modifySql>
    </changeSet>

    <changeSet id="3" author="mlemons" context="kpme-client-bootstrap">
        <comment>Adding the FK constraint referencing the 'owner' position type </comment>
        <addForeignKeyConstraint baseTableName="PM_PSTN_CL_GRP_KEY_T" baseColumnNames="PM_PSTN_CL_ID"
                                 referencedTableName="PM_PSTN_CL_T" referencedColumnNames="PM_PSTN_CL_ID"
                                 constraintName="FK_PSTN_CL_GRP_KEY" />
    </changeSet>

    <changeSet id="4" author="mlemons" context="kpme-client-bootstrap">
        <createIndex indexName="PM_PSTN_CL_GRP_KEY_IDX1" tableName="PM_PSTN_CL_GRP_KEY_T" unique="true">
            <column name="PM_PSTN_CL_ID" />
            <column name="GRP_KEY_CD" />
        </createIndex>
    </changeSet>

</databaseChangeLog>